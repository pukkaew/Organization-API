<!-- Welcome Section -->
<div class="bg-white overflow-hidden shadow-sm rounded-lg card widget welcome-card">
    <div class="p-6 bg-gradient-to-r from-ruxchai-blue to-ruxchai-blue-600">
        <h1 class="text-3xl font-bold text-white">
            Welcome to Organization Management System
        </h1>
        <p class="mt-2 text-ruxchai-blue-100">
            Manage your organization structure efficiently - Ruxchai Cold Storage
        </p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 stats-container responsive responsive-grid col-12">
    <!-- Companies Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg card widget stat-card">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-building text-3xl text-ruxchai-blue"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Companies
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.companies ? stats.companies : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/companies" class="font-medium text-primary-600 hover:text-primary-500">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Branches Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg card widget stat-card">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-code-branch text-3xl text-ruxchai-green"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Branches
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.branches ? stats.branches : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/branches" class="font-medium text-primary-600 hover:text-primary-500">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Divisions Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg card widget stat-card">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-sitemap text-3xl text-ruxchai-grey-medium"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Divisions
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.divisions ? stats.divisions : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/divisions" class="font-medium text-primary-600 hover:text-primary-500">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Departments Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg card widget stat-card">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-users text-3xl text-ruxchai-blue-dark"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Departments
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.departments ? stats.departments : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/departments" class="font-medium text-primary-600 hover:text-primary-500">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity & Quick Actions -->
<div class="mt-8 grid grid-cols-1 gap-5 lg:grid-cols-2 responsive responsive-grid col-12">
    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg card widget action-card">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                Quick Actions
            </h3>
            <div class="mt-5 grid grid-cols-1 gap-3 sm:grid-cols-2">
                <a href="/companies/new" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    Add Company
                </a>
                <a href="/branches/new" class="btn btn-success">
                    <i class="fas fa-plus mr-2"></i>
                    Add Branch
                </a>
                <a href="/divisions/new" class="btn btn-outline">
                    <i class="fas fa-plus mr-2"></i>
                    Add Division
                </a>
                <a href="/departments/new" class="btn btn-outline">
                    <i class="fas fa-plus mr-2"></i>
                    Add Department
                </a>
            </div>
        </div>
    </div>
    
    <!-- API Usage -->
    <div class="bg-white shadow rounded-lg card widget api-usage-card">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
                API Usage (Last 30 Days)
            </h3>
            <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2">
                <div>
                    <dt class="text-sm font-medium text-gray-500">
                        Total API Calls
                    </dt>
                    <dd class="mt-1 text-3xl font-semibold text-gray-900">
                        <%= typeof apiStats !== 'undefined' && apiStats.totalCalls ? apiStats.totalCalls.toLocaleString() : 0 %>
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">
                        Active API Keys
                    </dt>
                    <dd class="mt-1 text-3xl font-semibold text-gray-900">
                        <%= typeof apiStats !== 'undefined' && apiStats.activeKeys ? apiStats.activeKeys : 0 %>
                    </dd>
                </div>
            </dl>
            <div class="mt-5">
                <a href="/api-keys" class="text-sm font-medium text-primary-600 hover:text-primary-500">
                    Manage API Keys <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities (Optional) -->
<% if (typeof recentActivities !== 'undefined' && recentActivities && recentActivities.length > 0) { %>
    <div class="mt-8">
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Recent Activities
                </h3>
                <div class="flow-root">
                    <ul class="-mb-8">
                        <% recentActivities.forEach((activity, index) => { %>
                            <li>
                                <div class="relative pb-8">
                                    <% if (index !== recentActivities.length - 1) { %>
                                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                                    <% } %>
                                    <div class="relative flex space-x-3">
                                        <div>
                                            <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white 
                                                <%= activity.type === 'create' ? 'bg-green-500' : 
                                                    activity.type === 'update' ? 'bg-blue-500' : 
                                                    activity.type === 'delete' ? 'bg-red-500' : 'bg-gray-500' %>">
                                                <i class="fas fa-<%= activity.type === 'create' ? 'plus' : 
                                                    activity.type === 'update' ? 'edit' : 
                                                    activity.type === 'delete' ? 'trash' : 'info' %> text-white text-xs"></i>
                                            </span>
                                        </div>
                                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                            <div>
                                                <p class="text-sm text-gray-900">
                                                    <%= activity.description %>
                                                </p>
                                            </div>
                                            <div class="text-right text-sm whitespace-nowrap text-gray-500">
                                                <%= activity.time %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } %>