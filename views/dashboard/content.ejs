<!-- Dashboard Header -->
<div class="mb-8">
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Dashboard</h1>
                <p class="text-gray-600">ระบบจัดการโครงสร้างองค์กร Ruxchai Cold Storage</p>
            </div>
            <div class="flex items-center space-x-2 bg-ruxchai-green/10 px-4 py-2 rounded-full">
                <div class="w-2 h-2 bg-ruxchai-green rounded-full animate-pulse"></div>
                <span class="text-ruxchai-green font-semibold text-sm">ออนไลน์</span>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Companies -->
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                <i class="fas fa-building text-white text-xl"></i>
            </div>
            <span class="text-3xl font-bold text-gray-900">
                <%= typeof stats !== 'undefined' && stats.totalCompanies ? stats.totalCompanies : 0 %>
            </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-1">บริษัท</h3>
        <p class="text-gray-600 text-sm mb-4">องค์กรหลักในระบบ</p>
        <a href="/companies" class="w-full bg-ruxchai-blue text-white text-center py-2 rounded-lg font-medium hover:bg-ruxchai-blue-dark transition-colors block">
            ดูรายละเอียด
        </a>
    </div>
    
    <!-- Branches -->
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-ruxchai-green rounded-lg flex items-center justify-center">
                <i class="fas fa-code-branch text-white text-xl"></i>
            </div>
            <span class="text-3xl font-bold text-gray-900">
                <%= typeof stats !== 'undefined' && stats.totalBranches ? stats.totalBranches : 0 %>
            </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-1">สาขา</h3>
        <p class="text-gray-600 text-sm mb-4">จุดบริการทั่วประเทศ</p>
        <a href="/branches" class="w-full bg-ruxchai-green text-white text-center py-2 rounded-lg font-medium hover:bg-ruxchai-green-dark transition-colors block">
            ดูรายละเอียด
        </a>
    </div>
    
    <!-- Divisions -->
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                <i class="fas fa-sitemap text-white text-xl"></i>
            </div>
            <span class="text-3xl font-bold text-gray-900">
                <%= typeof stats !== 'undefined' && stats.totalDivisions ? stats.totalDivisions : 0 %>
            </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-1">ฝ่าย</h3>
        <p class="text-gray-600 text-sm mb-4">หน่วยงานหลัก</p>
        <a href="/divisions" class="w-full bg-ruxchai-blue text-white text-center py-2 rounded-lg font-medium hover:bg-ruxchai-blue-dark transition-colors block">
            ดูรายละเอียด
        </a>
    </div>
    
    <!-- Departments -->
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-ruxchai-green rounded-lg flex items-center justify-center">
                <i class="fas fa-users text-white text-xl"></i>
            </div>
            <span class="text-3xl font-bold text-gray-900">
                <%= typeof stats !== 'undefined' && stats.totalDepartments ? stats.totalDepartments : 0 %>
            </span>
        </div>
        <h3 class="text-lg font-semibold text-gray-800 mb-1">แผนก</h3>
        <p class="text-gray-600 text-sm mb-4">หน่วยงานย่อย</p>
        <a href="/departments" class="w-full bg-ruxchai-green text-white text-center py-2 rounded-lg font-medium hover:bg-ruxchai-green-dark transition-colors block">
            ดูรายละเอียด
        </a>
    </div>
</div>

<!-- Main Content -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Quick Actions -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-lg border border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-xl font-bold text-gray-900">การดำเนินการด่วน</h3>
            <p class="text-gray-600 mt-1">สร้างข้อมูลใหม่ในระบบ</p>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <a href="/companies/new" class="bg-ruxchai-blue text-white rounded-lg p-4 hover:bg-ruxchai-blue-dark transition-colors group">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-building text-xl"></i>
                        <div>
                            <div class="font-semibold">เพิ่มบริษัท</div>
                            <div class="text-sm opacity-90">สร้างองค์กรหลักใหม่</div>
                        </div>
                    </div>
                </a>
                
                <a href="/branches/new" class="bg-ruxchai-green text-white rounded-lg p-4 hover:bg-ruxchai-green-dark transition-colors group">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-code-branch text-xl"></i>
                        <div>
                            <div class="font-semibold">เพิ่มสาขา</div>
                            <div class="text-sm opacity-90">เพิ่มจุดบริการใหม่</div>
                        </div>
                    </div>
                </a>
                
                <a href="/divisions/new" class="bg-ruxchai-blue text-white rounded-lg p-4 hover:bg-ruxchai-blue-dark transition-colors group">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-sitemap text-xl"></i>
                        <div>
                            <div class="font-semibold">เพิ่มฝ่าย</div>
                            <div class="text-sm opacity-90">จัดตั้งหน่วยงานหลัก</div>
                        </div>
                    </div>
                </a>
                
                <a href="/departments/new" class="bg-ruxchai-green text-white rounded-lg p-4 hover:bg-ruxchai-green-dark transition-colors group">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-users text-xl"></i>
                        <div>
                            <div class="font-semibold">เพิ่มแผนก</div>
                            <div class="text-sm opacity-90">สร้างหน่วยงานย่อย</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Sidebar Info -->
    <div class="space-y-6">
        <!-- API Usage -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-bold text-gray-900">API Usage</h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="bg-ruxchai-blue/10 rounded-lg p-4">
                    <p class="text-sm text-gray-600 mb-1">การเรียกใช้ API (30 วัน)</p>
                    <p class="text-2xl font-bold text-ruxchai-blue">
                        <%= typeof apiStats !== 'undefined' && apiStats.totalCalls ? apiStats.totalCalls.toLocaleString() : '0' %>
                    </p>
                </div>
                <div class="bg-ruxchai-green/10 rounded-lg p-4">
                    <p class="text-sm text-gray-600 mb-1">API Keys ที่มีการใช้งาน</p>
                    <p class="text-xs text-gray-500 mb-2">Keys ที่มี usage history</p>
                    <p class="text-2xl font-bold text-ruxchai-green">
                        <%= typeof apiStats !== 'undefined' && apiStats.activeKeys !== undefined ? apiStats.activeKeys : '0' %>
                    </p>
                </div>
                <a href="/api-keys" class="w-full bg-ruxchai-blue text-white text-center py-2 rounded-lg font-medium hover:bg-ruxchai-blue-dark transition-colors block">
                    จัดการ API Keys
                </a>
            </div>
        </div>
        
        <!-- System Status -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-bold text-gray-900">สถานะระบบ</h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="flex items-center justify-between bg-ruxchai-green/10 rounded-lg p-3 border border-ruxchai-green/20">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-database text-ruxchai-green text-lg"></i>
                        <span class="font-semibold text-gray-900">Database</span>
                    </div>
                    <span class="px-3 py-1 bg-ruxchai-green text-white rounded-full text-xs font-bold">
                        <i class="fas fa-check mr-1"></i>Connected
                    </span>
                </div>
                <div class="flex items-center justify-between bg-ruxchai-blue/10 rounded-lg p-3 border border-ruxchai-blue/20">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-server text-ruxchai-blue text-lg"></i>
                        <span class="font-semibold text-gray-900">API Service</span>
                    </div>
                    <span class="px-3 py-1 bg-ruxchai-blue text-white rounded-full text-xs font-bold">
                        <i class="fas fa-play mr-1"></i>Running
                    </span>
                </div>
                <div class="flex items-center justify-between bg-ruxchai-green/10 rounded-lg p-3 border border-ruxchai-green/20">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-bolt text-ruxchai-green text-lg"></i>
                        <span class="font-semibold text-gray-900">Cache</span>
                    </div>
                    <span class="px-3 py-1 bg-ruxchai-green text-white rounded-full text-xs font-bold">
                        <i class="fas fa-lightning-bolt mr-1"></i>Active
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<% if (typeof recentActivities !== 'undefined' && recentActivities && recentActivities.length > 0) { %>
    <div class="mt-8">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                            <i class="fas fa-history text-white"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900">กิจกรรมล่าสุด</h3>
                    </div>
                    <span class="text-sm text-gray-500">แสดง 5 รายการล่าสุด</span>
                </div>
            </div>
            <div class="p-6">
                <div class="space-y-3">
                    <% recentActivities.slice(0, 5).forEach((activity, index) => { %>
                        <div class="flex items-start space-x-4 p-4 hover:bg-gray-50 rounded-lg transition-colors border-l-4 <%= activity.type === 'create' ? 'border-ruxchai-green' : activity.type === 'update' ? 'border-ruxchai-blue' : activity.type === 'delete' ? 'border-red-500' : 'border-gray-400' %>">
                            <!-- Icon -->
                            <div class="w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 <%= activity.type === 'create' ? 'bg-ruxchai-green shadow-lg shadow-green-500/25' : activity.type === 'update' ? 'bg-ruxchai-blue shadow-lg shadow-blue-500/25' : activity.type === 'delete' ? 'bg-red-500 shadow-lg shadow-red-500/25' : 'bg-gray-500 shadow-lg shadow-gray-500/25' %>">
                                <i class="fas fa-<%= activity.icon %> text-white text-lg"></i>
                            </div>
                            
                            <!-- Content -->
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between mb-2">
                                    <div class="flex-1">
                                        <p class="font-semibold text-gray-900 text-sm mb-1"><%- activity.description %></p>
                                        <% if (activity.detail) { %>
                                            <p class="text-xs text-gray-600 mb-2"><%= activity.detail %></p>
                                        <% } %>
                                        <div class="flex items-center space-x-3 text-xs text-gray-500">
                                            <span class="flex items-center">
                                                <i class="fas fa-user mr-1"></i>
                                                <%= activity.user %>
                                            </span>
                                            <span class="flex items-center">
                                                <i class="fas fa-clock mr-1"></i>
                                                <%= activity.time %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="flex flex-col items-end space-y-1">
                                        <span class="px-3 py-1 rounded-full text-xs font-semibold <%= activity.type === 'create' ? 'bg-ruxchai-green/10 text-ruxchai-green' : activity.type === 'update' ? 'bg-ruxchai-blue/10 text-ruxchai-blue' : activity.type === 'delete' ? 'bg-red-100 text-red-600' : 'bg-gray-100 text-gray-600' %>">
                                            <%= activity.type === 'create' ? 'สร้างใหม่' : activity.type === 'update' ? 'อัพเดท' : activity.type === 'delete' ? 'ลบ' : 'อื่นๆ' %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                <!-- View All Link -->
                <div class="mt-6 pt-4 border-t border-gray-200 text-center">
                    <span class="text-sm text-gray-500">กิจกรรมล่าสุดในระบบ</span>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <!-- No Activities -->
    <div class="mt-8">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-gray-400 rounded-lg flex items-center justify-center">
                        <i class="fas fa-history text-white"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">กิจกรรมล่าสุด</h3>
                </div>
            </div>
            <div class="p-6 text-center">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-clock text-gray-400 text-2xl"></i>
                </div>
                <p class="text-gray-600 font-medium">ยังไม่มีกิจกรรมในระบบ</p>
                <p class="text-sm text-gray-500 mt-1">กิจกรรมจะแสดงที่นี่เมื่อมีการใช้งานระบบ</p>
            </div>
        </div>
    </div>
<% } %>