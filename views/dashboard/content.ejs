<!-- Welcome Section -->
<div class="bg-white overflow-hidden shadow rounded-lg mb-8">
    <div class="p-6 bg-gradient-to-r from-blue-600 to-blue-700">
        <h1 class="text-3xl font-bold text-white">
            <i class="fas fa-tachometer-alt mr-3"></i>
            Welcome to Organization Management System
        </h1>
        <p class="mt-2 text-blue-100">
            <i class="fas fa-snowflake mr-2"></i>
            Manage your organization structure efficiently - Ruxchai Cold Storage
        </p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-4 mb-6 sm:mb-8">
    <!-- Companies Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-building text-xl text-blue-600"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Companies
                        </dt>
                        <dd class="text-2xl font-bold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.companies ? stats.companies : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/companies" class="font-medium text-blue-600 hover:text-blue-500 transition-colors">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Branches Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-code-branch text-xl text-green-600"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Branches
                        </dt>
                        <dd class="text-2xl font-bold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.branches ? stats.branches : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/branches" class="font-medium text-green-600 hover:text-green-500 transition-colors">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Divisions Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-sitemap text-xl text-purple-600"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Divisions
                        </dt>
                        <dd class="text-2xl font-bold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.divisions ? stats.divisions : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/divisions" class="font-medium text-purple-600 hover:text-purple-500 transition-colors">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Departments Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow duration-200">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-users text-xl text-orange-600"></i>
                    </div>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Departments
                        </dt>
                        <dd class="text-2xl font-bold text-gray-900">
                            <%= typeof stats !== 'undefined' && stats.departments ? stats.departments : 0 %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
                <a href="/departments" class="font-medium text-orange-600 hover:text-orange-500 transition-colors">
                    View all <span aria-hidden="true">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity & Quick Actions -->
<div class="grid grid-cols-1 gap-4 sm:gap-6 lg:grid-cols-2">
    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-5">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-lightning-bolt mr-2 text-yellow-500"></i>
                Quick Actions
            </h3>
            <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                <a href="/companies/new" class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Add Company
                </a>
                <a href="/branches/new" class="inline-flex items-center justify-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Add Branch
                </a>
                <a href="/divisions/new" class="inline-flex items-center justify-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Add Division
                </a>
                <a href="/departments/new" class="inline-flex items-center justify-center px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Add Department
                </a>
            </div>
        </div>
    </div>
    
    <!-- API Usage -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-5">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-chart-bar mr-2 text-blue-500"></i>
                API Usage (Last 30 Days)
            </h3>
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div class="bg-gradient-to-r from-blue-50 to-blue-100 p-4 rounded-lg">
                    <dt class="text-sm font-medium text-blue-700">
                        Total API Calls
                    </dt>
                    <dd class="mt-1 text-2xl font-bold text-blue-900">
                        <%= typeof apiStats !== 'undefined' && apiStats.totalCalls ? apiStats.totalCalls.toLocaleString() : 0 %>
                    </dd>
                </div>
                <div class="bg-gradient-to-r from-green-50 to-green-100 p-4 rounded-lg">
                    <dt class="text-sm font-medium text-green-700">
                        Active API Keys
                    </dt>
                    <dd class="mt-1 text-2xl font-bold text-green-900">
                        <%= typeof apiStats !== 'undefined' && apiStats.activeKeys ? apiStats.activeKeys : 0 %>
                    </dd>
                </div>
            </dl>
            <div class="mt-4">
                <a href="/api-keys" class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors">
                    <i class="fas fa-key mr-1"></i>
                    Manage API Keys <span aria-hidden="true" class="ml-1">&rarr;</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities (Optional) -->
<% if (typeof recentActivities !== 'undefined' && recentActivities && recentActivities.length > 0) { %>
    <div class="mt-8">
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    Recent Activities
                </h3>
                <div class="flow-root">
                    <ul class="-mb-8">
                        <% recentActivities.forEach((activity, index) => { %>
                            <li>
                                <div class="relative pb-8">
                                    <% if (index !== recentActivities.length - 1) { %>
                                        <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                                    <% } %>
                                    <div class="relative flex space-x-3">
                                        <div>
                                            <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white 
                                                <%= activity.type === 'create' ? 'bg-green-500' : 
                                                    activity.type === 'update' ? 'bg-blue-500' : 
                                                    activity.type === 'delete' ? 'bg-red-500' : 'bg-gray-500' %>">
                                                <i class="fas fa-<%= activity.type === 'create' ? 'plus' : 
                                                    activity.type === 'update' ? 'edit' : 
                                                    activity.type === 'delete' ? 'trash' : 'info' %> text-white text-xs"></i>
                                            </span>
                                        </div>
                                        <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                            <div>
                                                <p class="text-sm text-gray-900">
                                                    <%= activity.description %>
                                                </p>
                                            </div>
                                            <div class="text-right text-sm whitespace-nowrap text-gray-500">
                                                <%= activity.time %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } %>