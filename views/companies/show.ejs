<%- include('../partials/header', {
    title: company.company_name_th + ' - Company Details',
    includeChartJS: false
}) %>

<%- include('../partials/navigation', {
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-4 sm:py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-xl rounded-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-ruxchai-blue to-blue-700 px-4 sm:px-6 py-8 text-white">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
                    <div class="min-w-0 flex-1">
                        <div class="flex items-center mb-3">
                            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center text-3xl mr-4">
                                <i class="fas fa-building text-white text-3xl drop-shadow-lg"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl sm:text-3xl font-bold text-white truncate">
                                    <%= company.company_name_th %>
                                </h2>
                                <p class="mt-1 text-sm text-blue-100 truncate"><%= company.company_name_en || '-' %></p>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                        <a href="/companies/<%= company.company_code %>/edit" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium">
                            <i class="fas fa-edit mr-2"></i>
                            แก้ไข
                        </a>
                        <a href="/companies" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                            <i class="fas fa-arrow-left mr-2"></i>
                            ย้อนกลับ
                        </a>
                    </div>
                </div>
            </div>

            <!-- Company Details -->
            <div class="p-4 sm:p-6 bg-gradient-to-br from-gray-50 to-blue-50">
                <dl class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="detail-card detail-card-blue">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-blue">
                                <i class="fas fa-id-card"></i>
                            </div>
                            Company Code
                        </dt>
                        <dd class="detail-value"><%= company.company_code %></dd>
                    </div>
                    
                    <div class="detail-card detail-card-emerald">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-emerald">
                                <i class="fas fa-id-card"></i>
                            </div>
                            Tax ID
                        </dt>
                        <dd class="detail-value font-mono"><%= company.tax_id || '-' %></dd>
                    </div>
                    
                    <div class="detail-card detail-card-purple">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-purple">
                                <i class="fas fa-toggle-on"></i>
                            </div>
                            Status
                        </dt>
                        <dd class="mt-1">
                            <%- include('../partials/status-badge', { isActive: company.is_active }) %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-cyan">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-cyan">
                                <i class="fas fa-globe"></i>
                            </div>
                            Website
                        </dt>
                        <dd class="text-sm text-gray-900 break-all">
                            <% if (company.website) { %>
                                <a href="<%= company.website %>" target="_blank" class="detail-value-link">
                                    <%= company.website %>
                                </a>
                            <% } else { %>
                                <span class="detail-value text-gray-500">-</span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-red">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-red">
                                <i class="fas fa-envelope"></i>
                            </div>
                            Email
                        </dt>
                        <dd class="text-sm text-gray-900 break-all">
                            <% if (company.email) { %>
                                <a href="mailto:<%= company.email %>" class="detail-value-link">
                                    <%= company.email %>
                                </a>
                            <% } else { %>
                                <span class="detail-value text-gray-500">-</span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-orange">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-orange">
                                <i class="fas fa-phone"></i>
                            </div>
                            Phone
                        </dt>
                        <dd class="detail-value"><%= company.phone || '-' %></dd>
                    </div>
                    
                    <div class="sm:col-span-2 lg:col-span-3 detail-card detail-card-indigo">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-indigo">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            Address
                        </dt>
                        <dd class="detail-value break-words"><%= company.address || '-' %></dd>
                    </div>
                </dl>
            </div>

            <!-- Related Data -->
            <div class="px-4 sm:px-6 py-8 bg-gradient-to-br from-slate-100 to-gray-200">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                    <div class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center mr-3">
                        <i class="fas fa-chart-bar text-white text-lg"></i>
                    </div>
                    Related Information
                </h3>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                    <a href="/branches?company_code=<%= company.company_code %>" class="stats-card stats-card-emerald">
                        <div class="stats-icon stats-icon-emerald">
                            <i class="fas fa-code-branch text-white"></i>
                        </div>
                        <div class="stats-number"><%= stats.branches || 0 %></div>
                        <div class="stats-label">Branches</div>
                    </a>
                    <a href="/divisions?company_code=<%= company.company_code %>" class="stats-card stats-card-purple">
                        <div class="stats-icon stats-icon-purple">
                            <i class="fas fa-sitemap text-white"></i>
                        </div>
                        <div class="stats-number"><%= stats.divisions || 0 %></div>
                        <div class="stats-label">Divisions</div>
                    </a>
                    <a href="/departments?company_code=<%= company.company_code %>" class="stats-card stats-card-orange">
                        <div class="stats-icon stats-icon-orange">
                            <i class="fas fa-users text-white"></i>
                        </div>
                        <div class="stats-number"><%= stats.departments || 0 %></div>
                        <div class="stats-label">Departments</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>