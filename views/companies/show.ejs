<%- include('../partials/header', {
    title: company.company_name_th + ' - Company Details',
    includeChartJS: false
}) %>

<%- include('../partials/navigation', {
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null,
    success: typeof success !== 'undefined' ? success : null,
    error: typeof error !== 'undefined' ? error : null,
    warning: typeof warning !== 'undefined' ? warning : null,
    info: typeof info !== 'undefined' ? info : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-4 sm:py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
                    <div class="min-w-0 flex-1">
                        <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 truncate">
                            <i class="fas fa-building mr-2 text-blue-600"></i>
                            <%= company.company_name_th %>
                        </h2>
                        <p class="mt-1 text-sm text-gray-500 truncate"><%= company.company_name_en || '-' %></p>
                    </div>
                    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                        <a href="/companies/<%= company.company_code %>/edit" class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                            <i class="fas fa-edit mr-2"></i>
                            Edit
                        </a>
                        <a href="/companies" class="inline-flex items-center justify-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Back
                        </a>
                    </div>
                </div>
            </div>

            <!-- Company Details -->
            <div class="p-4 sm:p-6">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-id-card mr-2 text-blue-500"></i>
                            Company Code
                        </dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900"><%= company.company_code %></dd>
                    </div>
                    
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-receipt mr-2 text-green-500"></i>
                            Tax ID
                        </dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900 font-mono"><%= company.tax_id || '-' %></dd>
                    </div>
                    
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-toggle-on mr-2 text-purple-500"></i>
                            Status
                        </dt>
                        <dd class="mt-1">
                            <% if (company.is_active) { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <i class="fas fa-check-circle mr-1"></i>
                                    Active
                                </span>
                            <% } else { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                    <i class="fas fa-times-circle mr-1"></i>
                                    Inactive
                                </span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-globe mr-2 text-blue-500"></i>
                            Website
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 break-all">
                            <% if (company.website) { %>
                                <a href="<%= company.website %>" target="_blank" class="text-blue-600 hover:text-blue-700 hover:underline">
                                    <%= company.website %>
                                </a>
                            <% } else { %>
                                -
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-envelope mr-2 text-red-500"></i>
                            Email
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 break-all">
                            <% if (company.email) { %>
                                <a href="mailto:<%= company.email %>" class="text-blue-600 hover:text-blue-700 hover:underline">
                                    <%= company.email %>
                                </a>
                            <% } else { %>
                                -
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-phone mr-2 text-orange-500"></i>
                            Phone
                        </dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900"><%= company.phone || '-' %></dd>
                    </div>
                    
                    <div class="sm:col-span-2 lg:col-span-3 bg-gray-50 p-4 rounded-lg">
                        <dt class="text-sm font-medium text-gray-500 flex items-center">
                            <i class="fas fa-map-marker-alt mr-2 text-indigo-500"></i>
                            Address
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 break-words"><%= company.address || '-' %></dd>
                    </div>
                </dl>
            </div>

            <!-- Related Data -->
            <div class="px-4 sm:px-6 py-4 border-t border-gray-200 bg-gray-50">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-chart-bar mr-2 text-blue-600"></i>
                    Related Information
                </h3>
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <a href="/branches?company_code=<%= company.company_code %>" class="text-center p-4 bg-white border rounded-lg hover:bg-blue-50 hover:border-blue-200 transition-all duration-200 shadow-sm hover:shadow">
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-code-branch text-green-600 text-xl"></i>
                        </div>
                        <div class="text-2xl font-bold text-green-600"><%= stats.branches || 0 %></div>
                        <div class="text-sm text-gray-600 font-medium">Branches</div>
                    </a>
                    <a href="/divisions?company_code=<%= company.company_code %>" class="text-center p-4 bg-white border rounded-lg hover:bg-purple-50 hover:border-purple-200 transition-all duration-200 shadow-sm hover:shadow">
                        <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-sitemap text-purple-600 text-xl"></i>
                        </div>
                        <div class="text-2xl font-bold text-purple-600"><%= stats.divisions || 0 %></div>
                        <div class="text-sm text-gray-600 font-medium">Divisions</div>
                    </a>
                    <a href="/departments?company_code=<%= company.company_code %>" class="text-center p-4 bg-white border rounded-lg hover:bg-orange-50 hover:border-orange-200 transition-all duration-200 shadow-sm hover:shadow">
                        <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-users text-orange-600 text-xl"></i>
                        </div>
                        <div class="text-2xl font-bold text-orange-600"><%= stats.departments || 0 %></div>
                        <div class="text-sm text-gray-600 font-medium">Departments</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>