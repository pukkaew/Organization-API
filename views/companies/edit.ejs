<!-- Path: /views/companies/edit.ejs -->
<%- include('../partials/header', { 
    title: 'Edit Company'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8"> 
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                            <i class="fas fa-building text-white text-xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">แก้ไขบริษัท</h1>
                            <p class="text-gray-600">แก้ไขข้อมูลบริษัทในระบบ</p>
                        </div>
                    </div>
                    <a href="/companies" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ย้อนกลับ
                    </a>
                </div>
            </div>
            
            <form method="post" action="/companies/<%= company.company_code %>" class="p-6">
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                <input type="hidden" name="_method" value="PUT">
                
                <!-- Error Messages -->
                <%- include('../partials/form-errors', { 
                    error: typeof error !== 'undefined' ? error : null,
                    validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                }) %>
                
                <div class="space-y-4">
                    <!-- Company Code (Read-only) -->
                    <div class="mb-6">
                        <label for="company_code" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-tag mr-2 text-ruxchai-blue"></i>
                            รหัสบริษัท
                        </label>
                        <input type="text" 
                               id="company_code" 
                               value="<%= company.company_code %>" 
                               disabled
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed">
                        <p class="mt-1 text-sm text-gray-500">
                            รหัสบริษัทไม่สามารถเปลี่ยนแปลงได้
                        </p>
                    </div>
                    
                    <!-- Thai Name -->
                    <div class="mb-6">
                        <label for="company_name_th" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                            ชื่อบริษัท (ภาษาไทย) <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_name_th" 
                               name="company_name_th" 
                               required
                               maxlength="200"
                               value="<%= company.company_name_th %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                    </div>
                    
                    <!-- English Name -->
                    <div class="mb-6">
                        <label for="company_name_en" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                            ชื่อบริษัท (ภาษาอังกฤษ)
                        </label>
                        <input type="text" 
                               id="company_name_en" 
                               name="company_name_en" 
                               maxlength="200"
                               value="<%= company.company_name_en || '' %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                    </div>
                    
                    <!-- Tax ID -->
                    <div class="mb-6">
                        <label for="tax_id" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-clipboard mr-2 text-ruxchai-blue"></i>
                            เลขประจำตัวผู้เสียภาษี
                        </label>
                        <input type="text" 
                               id="tax_id" 
                               name="tax_id" 
                               maxlength="13"
                               value="<%= company.tax_id || '' %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="เลขประจำตัวผู้เสียภาษี 13 หลัก (ไม่จำเป็น)">
                        <p class="mt-1 text-sm text-gray-500">
                            กรอกเลขประจำตัวผู้เสียภาษี 13 หลัก หรือเว้นว่างไว้หากไม่มี
                        </p>
                    </div>
                    
                    <!-- Website, Email, Phone, Address fields are temporarily disabled due to database schema limitations
                    
                    <div class="mb-6">
                        <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                            เว็บไซต์
                        </label>
                        <input type="url" 
                               id="website" 
                               name="website"
                               value="<%= company.website || '' %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="https://www.example.com">
                    </div>
                    
                    <div class="mb-6">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-2 text-ruxchai-blue"></i>
                            อีเมล
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email"
                               value="<%= company.email || '' %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="contact@example.com">
                    </div>
                    
                    <div class="mb-6">
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-phone mr-2 text-ruxchai-blue"></i>
                            โทรศัพท์
                        </label>
                        <input type="tel" 
                               id="phone" 
                               name="phone"
                               value="<%= company.phone || '' %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="02-123-4567">
                    </div>
                    
                    <div class="mb-6">
                        <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-map-marker-alt mr-2 text-ruxchai-blue"></i>
                            ที่อยู่
                        </label>
                        <textarea id="address" 
                                  name="address" 
                                  rows="3"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"><%= company.address || '' %></textarea>
                    </div>
                    
                    End of disabled fields -->
                    
                    <!-- Status Control -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-toggle-on mr-2 text-ruxchai-blue"></i>
                            สถานะการใช้งาน
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       <%= company.is_active ? 'checked' : '' %>
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ใช้งาน</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       <%= !company.is_active ? 'checked' : '' %>
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ไม่ใช้งาน</span>
                            </label>
                        </div>
                        <p class="mt-1 text-sm text-gray-500">
                            เลือกสถานะการใช้งานของบริษัทนี้
                        </p>
                    </div>
                    
                    <!-- Metadata -->
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-gray-500">วันที่สร้าง:</span>
                                <span class="text-gray-900 ml-2">
                                    <%= new Date(company.created_date).toLocaleString('th-TH') %>
                                </span>
                            </div>
                            <div>
                                <span class="text-gray-500">สร้างโดย:</span>
                                <span class="text-gray-900 ml-2"><%= company.created_by %></span>
                            </div>
                            <% if (company.updated_date) { %>
                                <div>
                                    <span class="text-gray-500">แก้ไขล่าสุด:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(company.updated_date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                                <div>
                                    <span class="text-gray-500">แก้ไขโดย:</span>
                                    <span class="text-gray-900 ml-2"><%= company.updated_by %></span>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/companies" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ยกเลิก
                    </a>
                    
                    <button type="submit" id="submit-btn" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium">
                        <i class="fas fa-save mr-2"></i>
                        บันทึกการเปลี่ยนแปลง
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
    // Tax ID formatting
    document.getElementById('tax_id').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
    
    // Form submission - remove loading state that might interfere
    document.querySelector('form').addEventListener('submit', function(e) {
        // Don't prevent default - let form submit normally
        
        // Simple visual feedback without disabling button
        const submitBtn = document.getElementById('submit-btn');
        submitBtn.style.opacity = '0.7';
        
        // Show loading message
        const tempMessage = document.createElement('div');
        tempMessage.innerHTML = '<div class="fixed top-4 right-4 bg-blue-500 text-white px-4 py-2 rounded-lg shadow-lg z-50"><i class="fas fa-spinner fa-spin mr-2"></i>กำลังบันทึกข้อมูล...</div>';
        document.body.appendChild(tempMessage);
        
        // Don't disable the button - let form submit naturally
        // The page will redirect anyway
    });
    </script>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>