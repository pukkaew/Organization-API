<!-- Path: /views/companies/edit.ejs -->
<%- include('../partials/header', { 
    title: 'Edit Company'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8"> 
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl border border-ruxchai-grey-100">
            <div class="px-6 py-4 bg-ruxchai-blue rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-building text-2xl mr-3"></i>
                        Edit Company
                    </h2>
                    <a href="/companies" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                        <i class="fas fa-times text-lg"></i>
                    </a>
                </div>
            </div>
            
            <form method="post" action="/companies/<%= company.company_code %>" class="p-6">
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                <input type="hidden" name="_method" value="PUT">
                
                <div class="space-y-6">
                    <!-- Company Code (Read-only) -->
                    <div>
                        <label for="company_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-tag text-lg mr-2"></i>
                            Company Code
                        </label>
                        <input type="text" 
                               id="company_code" 
                               value="<%= company.company_code %>" 
                               disabled
                               class="form-input bg-gray-100 cursor-not-allowed">
                        <p class="mt-1 text-sm text-gray-500">
                            Company code cannot be changed
                        </p>
                    </div>
                    
                    <!-- Thai Name -->
                    <div>
                        <label for="company_name_th" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-university text-lg mr-2"></i>
                            Thai Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_name_th" 
                               name="company_name_th" 
                               required
                               maxlength="200"
                               value="<%= company.company_name_th %>"
                               class="form-input focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue border-ruxchai-grey-300 transition-all duration-200">
                    </div>
                    
                    <!-- English Name -->
                    <div>
                        <label for="company_name_en" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-globe text-lg mr-2"></i>
                            English Name
                        </label>
                        <input type="text" 
                               id="company_name_en" 
                               name="company_name_en" 
                               maxlength="200"
                               value="<%= company.company_name_en || '' %>"
                               class="form-input focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue border-ruxchai-grey-300 transition-all duration-200">
                    </div>
                    
                    <!-- Tax ID -->
                    <div>
                        <label for="tax_id" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-clipboard text-lg mr-2"></i>
                            Tax ID
                        </label>
                        <input type="text" 
                               id="tax_id" 
                               name="tax_id" 
                               maxlength="13"
                               pattern="[0-9]{13}"
                               value="<%= company.tax_id || '' %>"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="13-digit tax ID">
                        <p class="mt-1 text-sm text-gray-500">
                            Enter 13-digit tax identification number
                        </p>
                    </div>
                    
                    <!-- Website -->
                    <div>
                        <label for="website" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-globe text-lg mr-2"></i>
                            Website
                        </label>
                        <input type="url" 
                               id="website" 
                               name="website"
                               value="<%= company.website || '' %>"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="https://www.example.com">
                    </div>
                    
                    <!-- Email -->
                    <div>
                        <label for="email" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-envelope text-lg mr-2"></i>
                            Email
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email"
                               value="<%= company.email || '' %>"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="contact@example.com">
                    </div>
                    
                    <!-- Phone -->
                    <div>
                        <label for="phone" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-phone text-lg mr-2"></i>
                            Phone
                        </label>
                        <input type="tel" 
                               id="phone" 
                               name="phone"
                               value="<%= company.phone || '' %>"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="02-123-4567">
                    </div>
                    
                    <!-- Address -->
                    <div>
                        <label for="address" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-map-marker-alt text-lg mr-2"></i>
                            Address
                        </label>
                        <textarea id="address" 
                                  name="address" 
                                  rows="3"
                                  class="form-input focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue border-ruxchai-grey-300 transition-all duration-200"><%= company.address || '' %></textarea>
                    </div>
                    
                    <!-- Status Notice -->
                    <div class="bg-ruxchai-green-50 border border-ruxchai-green-200 rounded-lg p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle text-ruxchai-green-400"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-ruxchai-green-700">
                                    Status: <strong><%= company.is_active ? 'Active' : 'Inactive' %></strong>
                                </p>
                                <p class="text-sm text-yellow-700 mt-1">
                                    To change status, use the toggle button on the company list page.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Metadata -->
                    <div class="bg-ruxchai-grey-50 border border-ruxchai-grey-200 rounded-lg p-4">
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="text-ruxchai-grey-500">Created:</span>
                                <span class="text-ruxchai-grey-900 ml-2">
                                    <%= new Date(company.created_date).toLocaleString('th-TH') %>
                                </span>
                            </div>
                            <div>
                                <span class="text-ruxchai-grey-500">Created by:</span>
                                <span class="text-ruxchai-grey-900 ml-2"><%= company.created_by %></span>
                            </div>
                            <% if (company.updated_date) { %>
                                <div>
                                    <span class="text-ruxchai-grey-500">Updated:</span>
                                    <span class="text-ruxchai-grey-900 ml-2">
                                        <%= new Date(company.updated_date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                                <div>
                                    <span class="text-ruxchai-grey-500">Updated by:</span>
                                    <span class="text-ruxchai-grey-900 ml-2"><%= company.updated_by %></span>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/companies" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <button type="submit" id="submit-btn" class="btn bg-ruxchai-blue hover:bg-ruxchai-blue-700 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        <span class="btn-text">
                            <i class="fas fa-save mr-2"></i>
                            Update Company
                        </span>
                        <span class="btn-loading hidden">
                            <i class="spinner mr-2"></i>
                            Updating...
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
    // Tax ID formatting
    document.getElementById('tax_id').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>