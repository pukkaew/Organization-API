<!-- Page Header -->
<div class="mb-8">
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">บริษัท</h1>
                <p class="text-gray-600">จัดการข้อมูลบริษัททั้งหมดในองค์กร</p>
            </div>
            <a href="/companies/new" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium">
                <i class="fas fa-plus mr-2"></i>
                เพิ่มบริษัทใหม่
            </a>
        </div>
    </div>
</div>

<!-- Filters Section -->
<%- include('../partials/filter-card', { 
    action: '/companies',
    filters: typeof filters !== 'undefined' ? filters : {},
    entityType: 'companies'
}) %>

<!-- Companies Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-200">
    <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                <i class="fas fa-table text-white"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900">รายการบริษัท</h3>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                        รหัสบริษัท
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-signature mr-2 text-ruxchai-blue"></i>
                        ชื่อบริษัท
                    </th>
                    <th scope="col" class="hidden lg:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                        ชื่อภาษาอังกฤษ
                    </th>
                    <th scope="col" class="hidden lg:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-id-card mr-2 text-ruxchai-blue"></i>
                        เลขประจำตัวผู้เสียภาษี
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-toggle-on mr-2 text-ruxchai-blue"></i>
                        สถานะ
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-cogs mr-2 text-ruxchai-blue"></i>
                        การดำเนินการ
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                    <% companies.forEach(function(company, index) { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                        <i class="fas fa-building text-white text-sm"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-base font-bold text-gray-900">
                                            <%= company.company_code %>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div>
                                    <div class="text-base font-bold text-gray-900">
                                        <%= company.company_name_th || '-' %>
                                    </div>
                                    <% if (company.company_name_en) { %>
                                        <div class="text-sm text-gray-500">
                                            <%= company.company_name_en %>
                                        </div>
                                    <% } %>
                                </div>
                            </td>
                            <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= company.company_name_en || '-' %>
                                </div>
                            </td>
                            <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900 font-mono">
                                    <%= company.tax_id || '-' %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <%- include('../partials/status-badge', { isActive: company.is_active }) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <%- include('../partials/action-buttons', { 
                                    entity: 'companies', 
                                    code: company.company_code, 
                                    isActive: company.is_active,
                                    csrfToken: typeof csrfToken !== 'undefined' ? csrfToken : null
                                }) %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-building text-gray-400 text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">ไม่พบบริษัท</h3>
                            <p class="text-gray-600">เริ่มต้นด้วยการสร้างบริษัทแรกของคุณ</p>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
    <div class="mt-6">
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    </div>
<% } %>

