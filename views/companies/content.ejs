                                    <span class="hidden sm:inline">Status</span>
                                </th>
                                <th scope="col" class="px-3 sm:px-6 py-4 sm:py-5 text-center text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-cogs mr-2"></i>
                                    <span class="hidden sm:inline">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                                <% companies.forEach(function(company, index) { %>
                                    <tr class="table-row">
                                        <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-blue-500 to-blue-700 rounded-xl flex items-center justify-center mr-3 sm:mr-4 shadow-md hover:shadow-lg transition-all duration-200">
