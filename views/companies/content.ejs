    <div class="space-y-6">
        <!-- Page Header -->
        <%- include('../partials/page-header', { 
            title: 'Companies',
            description: 'Manage all companies in your organization',
            icon: 'building',
            iconColor: 'blue',
            addUrl: '/companies/new',
            addText: 'เพิ่มบริษัทใหม่'
        }) %>
            
        <!-- Filters Section -->
        <%- include('../partials/filter-card', { 
            action: '/companies',
            filters: typeof filters !== 'undefined' ? filters : {},
            entityType: 'companies'
        }) %>
            
            <!-- Companies Table -->
            <div class="table-container fast-table">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gradient-to-r from-blue-600 to-blue-700 text-white">
                            <tr>
                                <th scope="col" class="px-3 sm:px-6 py-4 sm:py-5 text-left text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-building mr-2"></i>
                                    <span class="hidden sm:inline">Company</span> Code
                                </th>
                                <th scope="col" class="px-3 sm:px-6 py-4 sm:py-5 text-left text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-signature mr-2"></i>
                                    <span class="hidden lg:inline">Company</span> Name
                                </th>
                                <th scope="col" class="hidden lg:table-cell px-3 sm:px-6 py-4 sm:py-5 text-left text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-globe mr-2"></i>
                                    English Name
                                </th>
                                <th scope="col" class="hidden lg:table-cell px-3 sm:px-6 py-4 sm:py-5 text-left text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-id-card mr-2"></i>
                                    Tax ID
                                </th>
                                <th scope="col" class="px-3 sm:px-6 py-4 sm:py-5 text-center text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-toggle-on mr-2"></i>
                                    <span class="hidden sm:inline">Status</span>
                                </th>
                                <th scope="col" class="px-3 sm:px-6 py-4 sm:py-5 text-center text-xs sm:text-sm font-bold text-white uppercase tracking-wider">
                                    <i class="fas fa-cogs mr-2"></i>
                                    <span class="hidden sm:inline">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                                <% companies.forEach(function(company, index) { %>
                                    <tr class="table-row">
                                        <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="table-icon table-icon-blue">
                                                    <i class="fas fa-building" aria-hidden="true"></i>
                                                </div>
                                                <div class="min-w-0 flex-1">
                                                    <div class="text-sm sm:text-base font-bold text-gray-900 truncate">
                                                        <%= company.company_code %>
                                                    </div>
                                                    <div class="text-xs text-gray-500 truncate sm:hidden">
                                                        <%= company.company_name_th || company.company_name_en || '-' %>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                                            <div class="min-w-0">
                                                <div class="text-sm font-medium text-gray-900 truncate" title="<%= company.company_name_th || '' %>">
                                                    <%= company.company_name_th || '-' %>
                                                </div>
                                                <% if (company.company_name_en) { %>
                                                    <div class="text-xs text-gray-500 truncate hidden sm:block" title="<%= company.company_name_en %>">
                                                        <%= company.company_name_en %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="hidden lg:table-cell px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-600 truncate" title="<%= company.company_name_en || '' %>">
                                                <%= company.company_name_en || '-' %>
                                            </div>
                                        </td>
                                        <td class="hidden lg:table-cell px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap">
                                            <div class="text-xs sm:text-sm text-gray-600 font-mono">
                                                <%= company.tax_id || '-' %>
                                            </div>
                                        </td>
                                        <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-center">
                                            <%- include('../partials/status-badge', { isActive: company.is_active }) %>
                                        </td>
                                        <td class="px-3 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-center">
                                            <%- include('../partials/action-buttons', { 
                                                entity: 'companies', 
                                                code: company.company_code, 
                                                isActive: company.is_active,
                                                csrfToken: typeof csrfToken !== 'undefined' ? csrfToken : null
                                            }) %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="px-6 py-12">
                                        <div class="text-center">
                                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                                <i class="fas fa-building text-2xl text-gray-400"></i>
                                            </div>
                                            <h3 class="text-lg font-medium text-gray-900 mb-2">No companies found</h3>
                                            <p class="text-gray-500">Get started by creating your first company.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Pagination -->
            <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
                <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
            <% } %>
    </div>

