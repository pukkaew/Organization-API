<!-- Path: /views/companies/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Company'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8"> 
    <div class="max-w-3xl mx-auto">
        <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-2xl border border-gray-100">
            <div class="px-6 py-4 bg-gradient-to-r from-blue-600 to-indigo-700 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-white flex items-center">
                        <i class="fas fa-building text-2xl mr-3"></i>
                        Create New Company
                    </h2>
                    <a href="/companies" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                        <i class="fas fa-times text-lg"></i>
                    </a>
                </div>
            </div>
            
            <form method="post" action="/companies" class="p-6">
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                
                <div class="space-y-6">
                    <!-- Company Code -->
                    <div>
                        <label for="company_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-tag text-lg mr-2"></i>
                            Company Code <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_code" 
                               name="company_code" 
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="form-input uppercase focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., COMP001">
                        <p class="mt-1 text-sm text-gray-500">
                            Use uppercase letters and numbers only. This cannot be changed later.
                        </p>
                    </div>
                    
                    <!-- Thai Name -->
                    <div>
                        <label for="company_name_th" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-university text-lg mr-2"></i>
                            Thai Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_name_th" 
                               name="company_name_th" 
                               required
                               maxlength="200"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="ชื่อบริษัทภาษาไทย">
                    </div>
                    
                    <!-- English Name -->
                    <div>
                        <label for="company_name_en" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-globe text-lg mr-2"></i>
                            English Name
                        </label>
                        <input type="text" 
                               id="company_name_en" 
                               name="company_name_en" 
                               maxlength="200"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="Company Name in English">
                    </div>
                    
                    <!-- Tax ID -->
                    <div>
                        <label for="tax_id" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-clipboard text-lg mr-2"></i>
                            Tax ID
                        </label>
                        <input type="text" 
                               id="tax_id" 
                               name="tax_id" 
                               maxlength="13"
                               pattern="[0-9]{13}"
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="13-digit tax ID">
                        <p class="mt-1 text-sm text-gray-500">
                            Enter 13-digit tax identification number
                        </p>
                    </div>
                    
                    <!-- Website -->
                    <div>
                        <label for="website" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-globe text-lg mr-2"></i>
                            Website
                        </label>
                        <input type="url" 
                               id="website" 
                               name="website" 
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="https://www.example.com">
                    </div>
                    
                    <!-- Email -->
                    <div>
                        <label for="email" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-envelope text-lg mr-2"></i>
                            Email
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="contact@example.com">
                    </div>
                    
                    <!-- Phone -->
                    <div>
                        <label for="phone" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-phone text-lg mr-2"></i>
                            Phone
                        </label>
                        <input type="tel" 
                               id="phone" 
                               name="phone" 
                               class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                               placeholder="02-123-4567">
                    </div>
                    
                    <!-- Address -->
                    <div>
                        <label for="address" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-map-marker-alt text-lg mr-2"></i>
                            Address
                        </label>
                        <textarea id="address" 
                                  name="address" 
                                  rows="3"
                                  class="form-input focus:ring-2 focus:ring-blue-500 focus:border-blue-500 border-gray-300 transition-all duration-200"
                                  placeholder="Company address"></textarea>
                    </div>
                    
                    <!-- Status -->
                    <div>
                        <label class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-bolt text-lg mr-2"></i>
                            Status
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Active</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Inactive</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/companies" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="btn btn-outline border-gray-300 text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
                            <i class="fas fa-redo mr-2"></i>
                            Reset
                        </button>
                        <button type="submit" class="btn bg-gradient-to-r from-blue-600 to-indigo-700 hover:from-blue-700 hover:to-indigo-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" id="submit-btn">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                Create Company
                            </span>
                            <span class="btn-loading hidden">
                                <i class="spinner mr-2"></i>
                                Creating...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-lightbulb text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-blue-800 flex items-center">
                        <i class="fas fa-book mr-2"></i>
                        Guidelines
                    </h3>
                    <div class="mt-3 text-sm text-blue-700">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Company code cannot be changed after creation
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Tax ID must be exactly 13 digits
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Thai name is required for all companies
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                All companies start as active by default
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    // Auto uppercase for company code
    document.getElementById('company_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Tax ID formatting
    document.getElementById('tax_id').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>