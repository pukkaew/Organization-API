<!-- Path: /views/companies/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Company'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8"> 
    <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                            <i class="fas fa-building text-white text-xl"></i>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-gray-900">สร้างบริษัทใหม่</h1>
                            <p class="text-gray-600">เพิ่มข้อมูลบริษัทในระบบ</p>
                        </div>
                    </div>
                    <a href="/companies" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ย้อนกลับ
                    </a>
                </div>
            </div>
            
            <form method="post" action="/companies" class="p-6">
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                
                <!-- Error Messages -->
                <%- include('../partials/form-errors', { 
                    error: typeof error !== 'undefined' ? error : null,
                    validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                }) %>
                
                <div class="space-y-4">
                    <!-- Company Code -->
                    <div class="mb-6">
                        <label for="company_code" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-tag mr-2 text-ruxchai-blue"></i>
                            รหัสบริษัท <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_code" 
                               name="company_code" 
                               value="<%= typeof formData !== 'undefined' && formData.company_code ? formData.company_code : '' %>"
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue uppercase"
                               placeholder="เช่น COMP001">
                        <p class="mt-1 text-sm text-gray-500">
                            ใช้ตัวอักษรพิมพ์ใหญ่และตัวเลขเท่านั้น ไม่สามารถเปลี่ยนแปลงได้ภายหลัง
                        </p>
                    </div>
                    
                    <!-- Thai Name -->
                    <div class="mb-6">
                        <label for="company_name_th" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                            ชื่อบริษัท (ภาษาไทย) <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_name_th" 
                               name="company_name_th" 
                               value="<%= typeof formData !== 'undefined' && formData.company_name_th ? formData.company_name_th : '' %>"
                               required
                               maxlength="200"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="ชื่อบริษัทภาษาไทย">
                    </div>
                    
                    <!-- English Name -->
                    <div class="mb-6">
                        <label for="company_name_en" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                            ชื่อบริษัท (ภาษาอังกฤษ)
                        </label>
                        <input type="text" 
                               id="company_name_en" 
                               name="company_name_en" 
                               value="<%= typeof formData !== 'undefined' && formData.company_name_en ? formData.company_name_en : '' %>"
                               maxlength="200"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="Company Name in English">
                    </div>
                    
                    <!-- Tax ID -->
                    <div class="mb-6">
                        <label for="tax_id" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-clipboard mr-2 text-ruxchai-blue"></i>
                            เลขประจำตัวผู้เสียภาษี
                        </label>
                        <input type="text" 
                               id="tax_id" 
                               name="tax_id" 
                               value="<%= typeof formData !== 'undefined' && formData.tax_id ? formData.tax_id : '' %>"
                               maxlength="13"
                               pattern="[0-9]{13}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="เลขประจำตัวผู้เสียภาษี 13 หลัก">
                        <p class="mt-1 text-sm text-gray-500">
                            กรอกเลขประจำตัวผู้เสียภาษี 13 หลัก
                        </p>
                    </div>
                    
                    <!-- Website -->
                    <div class="mb-6">
                        <label for="website" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                            เว็บไซต์
                        </label>
                        <input type="url" 
                               id="website" 
                               name="website" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="https://www.example.com">
                    </div>
                    
                    <!-- Email -->
                    <div class="mb-6">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-2 text-ruxchai-blue"></i>
                            อีเมล
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="contact@example.com">
                    </div>
                    
                    <!-- Phone -->
                    <div class="mb-6">
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-phone mr-2 text-ruxchai-blue"></i>
                            โทรศัพท์
                        </label>
                        <input type="tel" 
                               id="phone" 
                               name="phone" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="02-123-4567">
                    </div>
                    
                    <!-- Address -->
                    <div class="mb-6">
                        <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-map-marker-alt mr-2 text-ruxchai-blue"></i>
                            ที่อยู่
                        </label>
                        <textarea id="address" 
                                  name="address" 
                                  rows="3"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                                  placeholder="ที่อยู่บริษัท"></textarea>
                    </div>
                    
                    <!-- Status -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-toggle-on mr-2 text-ruxchai-blue"></i>
                            สถานะ
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ใช้งาน</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ไม่ใช้งาน</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/companies" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ยกเลิก
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors font-medium">
                            <i class="fas fa-sync-alt mr-2"></i>
                            รีเซ็ต
                        </button>
                        <button type="submit" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium" id="submit-btn">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                บันทึกบริษัท
                            </span>
                            <span class="btn-loading hidden">
                                <i class="fas fa-spinner fa-spin mr-2"></i>
                                กำลังบันทึก...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                        <i class="fas fa-lightbulb text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-gray-900 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-ruxchai-blue"></i>
                        คำแนะนำ
                    </h3>
                    <div class="mt-3 text-sm text-gray-600">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                รหัสบริษัทไม่สามารถเปลี่ยนแปลงได้หลังจากสร้างแล้ว
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                เลขประจำตัวผู้เสียภาษีต้องเป็น 13 หลักเท่านั้น
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                ชื่อบริษัทภาษาไทยเป็นข้อมูลที่จำเป็น
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                บริษัททุกแห่งจะเริ่มต้นเป็น "ใช้งาน" เป็นค่าเริ่มต้น
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    // Auto uppercase for company code
    document.getElementById('company_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Tax ID formatting
    document.getElementById('tax_id').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>