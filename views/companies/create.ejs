<!-- Path: /views/companies/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Company'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'companies',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8"> 
    <div class="max-w-3xl mx-auto">
        <div class="form-section">
            <%- include('../partials/form-header', { 
                title: 'Create New Company',
                icon: 'building',
                iconColor: 'blue',
                backUrl: '/companies'
            }) %>
            
            <form method="post" action="/companies" class="p-6">
                <% if (typeof csrfToken !== 'undefined') { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                
                <!-- Error Messages -->
                <%- include('../partials/form-errors', { 
                    error: typeof error !== 'undefined' ? error : null,
                    validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                }) %>
                
                <div class="space-y-4">
                    <!-- Company Code -->
                    <div class="form-group-enhanced">
                        <label for="company_code" class="block text-sm font-medium text-gray-800 flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-tag text-white text-xs"></i>
                            </div>
                            Company Code <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_code" 
                               name="company_code" 
                               value="<%= typeof formData !== 'undefined' && formData.company_code ? formData.company_code : '' %>"
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="form-input-enhanced uppercase"
                               placeholder="e.g., COMP001">
                        <p class="mt-1 text-sm text-gray-500">
                            Use uppercase letters and numbers only. This cannot be changed later.
                        </p>
                    </div>
                    
                    <!-- Thai Name -->
                    <div class="form-group-enhanced">
                        <label for="company_name_th" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-building text-white text-xs"></i>
                            </div>
                            Thai Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="company_name_th" 
                               name="company_name_th" 
                               value="<%= typeof formData !== 'undefined' && formData.company_name_th ? formData.company_name_th : '' %>"
                               required
                               maxlength="200"
                               class="form-input-enhanced"
                               placeholder="ชื่อบริษัทภาษาไทย">
                    </div>
                    
                    <!-- English Name -->
                    <div class="form-group-enhanced">
                        <label for="company_name_en" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-globe text-white text-xs"></i>
                            </div>
                            English Name
                        </label>
                        <input type="text" 
                               id="company_name_en" 
                               name="company_name_en" 
                               value="<%= typeof formData !== 'undefined' && formData.company_name_en ? formData.company_name_en : '' %>"
                               maxlength="200"
                               class="form-input-enhanced"
                               placeholder="Company Name in English">
                    </div>
                    
                    <!-- Tax ID -->
                    <div class="form-group-enhanced">
                        <label for="tax_id" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-clipboard text-white text-xs"></i>
                            </div>
                            Tax ID
                        </label>
                        <input type="text" 
                               id="tax_id" 
                               name="tax_id" 
                               value="<%= typeof formData !== 'undefined' && formData.tax_id ? formData.tax_id : '' %>"
                               maxlength="13"
                               pattern="[0-9]{13}"
                               class="form-input-enhanced"
                               placeholder="13-digit tax ID">
                        <p class="mt-1 text-sm text-gray-500">
                            Enter 13-digit tax identification number
                        </p>
                    </div>
                    
                    <!-- Website -->
                    <div class="form-group-enhanced">
                        <label for="website" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-globe text-white text-xs"></i>
                            </div>
                            Website
                        </label>
                        <input type="url" 
                               id="website" 
                               name="website" 
                               class="form-input-enhanced"
                               placeholder="https://www.example.com">
                    </div>
                    
                    <!-- Email -->
                    <div class="form-group-enhanced">
                        <label for="email" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-envelope text-white text-xs"></i>
                            </div>
                            Email
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               class="form-input-enhanced"
                               placeholder="contact@example.com">
                    </div>
                    
                    <!-- Phone -->
                    <div class="form-group-enhanced">
                        <label for="phone" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-phone text-white text-xs"></i>
                            </div>
                            Phone
                        </label>
                        <input type="tel" 
                               id="phone" 
                               name="phone" 
                               class="form-input-enhanced"
                               placeholder="02-123-4567">
                    </div>
                    
                    <!-- Address -->
                    <div class="form-group-enhanced">
                        <label for="address" class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-map-marker-alt text-white text-xs"></i>
                            </div>
                            Address
                        </label>
                        <textarea id="address" 
                                  name="address" 
                                  rows="3"
                                  class="form-input-enhanced"
                                  placeholder="Company address"></textarea>
                    </div>
                    
                    <!-- Status -->
                    <div class="form-group-enhanced">
                        <label class="block text-sm font-medium text-gray-800 font-semibold flex items-center">
                            <div class="w-6 h-6 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-2 shadow-sm">
                                <i class="fas fa-bolt text-white text-xs"></i>
                            </div>
                            Status
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Active</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Inactive</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/companies" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 border-gray-300 text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
                            <i class="fas fa-sync-alt mr-2"></i>
                            Reset
                        </button>
                        <button type="submit" class="btn btn-primary" id="submit-btn">
                            <span class="btn-text">
                                <span style="font-size: 1rem; margin-right: 0.5rem;">💾</span>
                                บันทึกบริษัท
                            </span>
                            <span class="btn-loading hidden">
                                <span class="spinner mr-2"></span>
                                กำลังบันทึก...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-lightbulb text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-blue-800 flex items-center">
                        <i class="fas fa-book mr-2"></i>
                        Guidelines
                    </h3>
                    <div class="mt-3 text-sm text-blue-700">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Company code cannot be changed after creation
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Tax ID must be exactly 13 digits
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                Thai name is required for all companies
                            </li>
                            <li class="flex items-start">
                                <span class="text-blue-500 mr-2 mt-0.5">•</span>
                                All companies start as active by default
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    // Auto uppercase for company code
    document.getElementById('company_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Tax ID formatting
    document.getElementById('tax_id').addEventListener('input', function(e) {
        e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>