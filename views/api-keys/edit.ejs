<!-- Path: /views/api-keys/edit.ejs -->
<%- include('../partials/header', { 
    title: 'Edit API Key',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'api-keys',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                <i class="fas fa-key text-white text-xl"></i>
                            </div>
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">แก้ไข API Key</h1>
                                <p class="text-gray-600">แก้ไขข้อมูล API Key ในระบบ</p>
                            </div>
                        </div>
                        <a href="/api-keys/<%= apiKey.api_key_id %>" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                            <i class="fas fa-arrow-left mr-2"></i>
                            ย้อนกลับ
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/api-keys/<%= apiKey.api_key_id %>" class="p-6">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <!-- Error Messages -->
            <%- include('../partials/form-errors', { 
                error: typeof error !== 'undefined' ? error : null,
                validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
            }) %>
            
            <div class="space-y-4">
                <!-- API Key ID (Read-only) -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-key mr-2 text-ruxchai-blue"></i>
                        API Key ID
                    </label>
                    <input type="text" value="<%= apiKey.api_key_id %>" disabled
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed">
                    <p class="mt-1 text-sm text-gray-500">รหัสนี้ไม่สามารถเปลี่ยนแปลงได้</p>
                </div>

                <!-- Application Name -->
                <div class="mb-6">
                    <label for="app_name" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-mobile-alt mr-2 text-ruxchai-blue"></i>
                        ชื่อแอปพลิเคชัน <span class="text-red-500">*</span>
                    </label>
                    <input type="text" name="app_name" id="app_name" required
                           maxlength="100"
                           value="<%= apiKey.app_name %>"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                           placeholder="เช่น ระบบ ERP, แดชบอร์ด HR">
                    <p class="mt-1 text-sm text-gray-500">ชื่อของแอปพลิเคชันที่จะใช้ API Key นี้</p>
                </div>
    
                <!-- Description -->
                <div class="mb-6">
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-edit mr-2 text-ruxchai-blue"></i>
                        คำอธิบาย
                    </label>
                    <textarea name="description" id="description" rows="3"
                              maxlength="500"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                              placeholder="อธิบายวัตถุประสงค์ของ API Key นี้..."><%= apiKey.description || '' %></textarea>
                </div>
    
                <!-- Permissions -->
                <div class="mb-6">
                    <label for="permissions" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-lock mr-2 text-ruxchai-blue"></i>
                        สิทธิ์การเข้าถึง <span class="text-red-500">*</span>
                    </label>
                    <select name="permissions" id="permissions" required
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                        <option value="read" <%= apiKey.permissions === 'read' ? 'selected' : '' %>>
                            อ่านอย่างเดียว - สามารถดูข้อมูลองค์กรได้
                        </option>
                        <option value="write" <%= apiKey.permissions === 'write' ? 'selected' : '' %>>
                            เขียนอย่างเดียว - สามารถแก้ไขข้อมูลองค์กรได้
                        </option>
                        <option value="read_write" <%= apiKey.permissions === 'read_write' ? 'selected' : '' %>>
                            อ่านและเขียน - เข้าถึงข้อมูลองค์กรได้อย่างเต็มที่
                        </option>
                    </select>
                    <p class="mt-1 text-sm text-gray-500">เลือกระดับการเข้าถึงสำหรับ API Key นี้</p>
                </div>
    
                <!-- Expiration Date -->
                <div class="mb-6">
                    <label for="expires_date" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-calendar mr-2 text-ruxchai-blue"></i>
                        วันหมดอายุ
                    </label>
                    <input type="date" name="expires_date" id="expires_date"
                           min="<%= new Date().toISOString().split('T')[0] %>"
                           value="<%= apiKey.expires_date ? new Date(apiKey.expires_date).toISOString().split('T')[0] : '' %>"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                    <p class="mt-1 text-sm text-gray-500">เว้นว่างไว้หากไม่ต้องการกำหนดอายุ</p>
                </div>

                <!-- Status Display -->
                <div class="mb-6">
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-info-circle text-ruxchai-blue"></i>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-blue-700">
                                    สถานะปัจจุบัน: <strong><%= apiKey.is_active ? 'ใช้งาน' : 'ไม่ใช้งาน' %></strong>
                                </p>
                                <p class="text-sm text-blue-600 mt-1">
                                    หากต้องการเปลี่ยนสถานะ ให้ใช้ปุ่มเปิด/ปิดในหน้ารายการ API Keys
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Metadata -->
                <% if (apiKey.created_date || apiKey.updated_date) { %>
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                        <div class="grid grid-cols-1 gap-x-4 gap-y-2 sm:grid-cols-2 text-sm">
                            <% if (apiKey.created_date) { %>
                                <div>
                                    <span class="text-gray-500">วันที่สร้าง:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(apiKey.created_date).toLocaleString('th-TH') %>
                                        <% if (apiKey.created_by) { %>
                                            โดย <%= apiKey.created_by %>
                                        <% } %>
                                    </span>
                                </div>
                            <% } %>
                            <% if (apiKey.updated_date) { %>
                                <div>
                                    <span class="text-gray-500">แก้ไขล่าสุด:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(apiKey.updated_date).toLocaleString('th-TH') %>
                                        <% if (apiKey.updated_by) { %>
                                            โดย <%= apiKey.updated_by %>
                                        <% } %>
                                    </span>
                                </div>
                            <% } %>
                            <% if (apiKey.last_used_date) { %>
                                <div>
                                    <span class="text-gray-500">ใช้ครั้งล่าสุด:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(apiKey.last_used_date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <!-- Form Actions -->
            <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                <a href="/api-keys/<%= apiKey.api_key_id %>" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                    <i class="fas fa-arrow-left mr-2"></i>
                    ยกเลิก
                </a>
                
                <button type="submit" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium" id="submit-btn">
                    <span class="btn-text">
                        <i class="fas fa-save mr-2"></i>
                        บันทึกการเปลี่ยนแปลง
                    </span>
                    <span class="btn-loading hidden">
                        <i class="fas fa-spinner fa-spin mr-2"></i>
                        กำลังบันทึก...
                    </span>
                </button>
            </div>
        </form>
        
        <!-- Help Section -->
        <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                        <i class="fas fa-shield-alt text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-gray-900 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-ruxchai-blue"></i>
                        ข้อมูลความปลอดภัย
                    </h3>
                    <div class="mt-3 text-sm text-gray-600">
                        <p>การเปลี่ยนสิทธิ์จะมีผลต่อคำขอ API ทั้งหมดที่ใช้ API Key นี้ทันที</p>
                    </div>
                </div>
            </div>
        </div>
                
                <!-- Danger Zone -->
        <div class="mt-8 bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="text-lg font-medium text-red-900 mb-4">
                Danger Zone
            </h3>
            
            <div class="space-y-4">
                <!-- Regenerate Key -->
                <div class="flex items-center justify-between">
                    <div>
                        <h4 class="text-sm font-medium text-red-900">Regenerate API Key</h4>
                        <p class="text-sm text-red-700 mt-1">
                            Generate a new API key. The current key will be immediately deactivated.
                        </p>
                    </div>
                            <form method="POST" action="/api-keys/<%= apiKey.api_key_id %>/regenerate" class="inline">
                                <% if (typeof csrfToken !== 'undefined') { %>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <% } %>
                        <button type="submit" 
                                onclick="return confirm('Are you sure you want to regenerate this API key? The current key will be immediately deactivated and cannot be recovered.')"
                                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    <i class="fas fa-sync-alt mr-2"></i>
                            Regenerate Key
                                </button>
                            </form>
                </div>

                <!-- Toggle Status -->
                <div class="flex items-center justify-between pt-4 border-t border-red-200">
                    <div>
                        <h4 class="text-sm font-medium text-red-900">
                            <%= apiKey.is_active ? 'Deactivate' : 'Activate' %> API Key
                        </h4>
                        <p class="text-sm text-red-700 mt-1">
                            <%= apiKey.is_active 
                                ? 'This will immediately block all requests using this API key.' 
                                : 'This will allow the API key to be used again.' %>
                        </p>
                    </div>
                            <form method="POST" action="/api-keys/<%= apiKey.api_key_id %>/toggle-status" class="inline">
                                <% if (typeof csrfToken !== 'undefined') { %>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <% } %>
                        <button type="submit" 
                                onclick="return confirm('Are you sure you want to <%= apiKey.is_active ? 'deactivate' : 'activate' %> this API key?')"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white 
                                               <%= apiKey.is_active ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700' %> 
                                               focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-<%= apiKey.is_active ? 'red' : 'green' %>-500">
                                    <i class="fas fa-<%= apiKey.is_active ? 'pause' : 'play' %> mr-2"></i>
                            <%= apiKey.is_active ? 'Deactivate' : 'Activate' %> Key
                                </button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>