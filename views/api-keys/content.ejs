<!-- Path: /views/api-keys/content.ejs -->
<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white shadow-sm rounded-lg p-6">
        <div class="sm:flex sm:items-center sm:justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">API Keys</h1>
                <p class="mt-2 text-sm text-gray-700">Manage API keys for accessing the organization structure API</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="/api-keys/new" class="inline-flex items-center px-4 py-2 bg-ruxchai-blue text-white rounded-lg hover:bg-ruxchai-blue-600 transition-all duration-200 shadow-lg hover:shadow-xl text-sm font-medium">
                    <i class="fas fa-plus mr-2"></i>
                    Create API Key
                </a>
            </div>
        </div>
    </div>
    
    <!-- Filters Section -->
    <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">
            <i class="fas fa-filter mr-2"></i>Filters
        </h2>
        <form method="get" action="/api-keys" class="grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div>
                <label for="search" class="form-label">Search</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" 
                           name="search" 
                           id="search" 
                           value="<%= typeof query !== 'undefined' && query.search || '' %>"
                           placeholder="Search by app name..."
                           class="form-input pl-10">
                </div>
            </div>
            
            <div>
                <label for="is_active" class="form-label">Status</label>
                <select name="is_active" id="is_active" class="form-input">
                    <option value="">All Status</option>
                    <option value="true" <%= typeof query !== 'undefined' && query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= typeof query !== 'undefined' && query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                </select>
            </div>
            
            <div>
                <label for="permissions" class="form-label">Permissions</label>
                <select name="permissions" id="permissions" class="form-input">
                    <option value="">All Permissions</option>
                    <option value="read" <%= typeof query !== 'undefined' && query.permissions === 'read' ? 'selected' : '' %>>Read Only</option>
                    <option value="write" <%= typeof query !== 'undefined' && query.permissions === 'write' ? 'selected' : '' %>>Write Only</option>
                    <option value="read_write" <%= typeof query !== 'undefined' && query.permissions === 'read_write' ? 'selected' : '' %>>Read & Write</option>
                </select>
            </div>
            
            <div class="flex items-end">
                <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-all duration-200 text-sm font-medium">
                    <i class="fas fa-search mr-2"></i>
                    Apply Filters
                </button>
            </div>
        </form>
    </div>
    
    <!-- API Keys Table -->
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <div class="overflow-x-auto -mx-4 sm:mx-0">
            <div class="inline-block min-w-full align-middle">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-ruxchai-blue text-white">
                        <tr>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-mobile-alt text-base mr-1 sm:mr-2"></i>App Name
                            </th>
                            <th scope="col" class="hidden sm:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-clipboard text-base mr-2"></i>Description
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-lock text-base mr-1 sm:mr-2"></i><span class="hidden sm:inline">Permissions</span><span class="sm:hidden">Perms</span>
                            </th>
                            <th scope="col" class="hidden lg:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-chart-bar text-base mr-2"></i>Usage
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-chart-bar text-base mr-1 sm:mr-2"></i><span class="hidden sm:inline">Status</span>
                            </th>
                            <th scope="col" class="hidden md:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-calendar text-base mr-2"></i>Created
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-cog text-base mr-1 sm:mr-2"></i><span class="hidden sm:inline">Actions</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (typeof apiKeys !== 'undefined' && apiKeys.length > 0) { %>
                            <% apiKeys.forEach(function(apiKey, index) { %>
                                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> hover:bg-ruxchai-blue-50 hover:shadow-md transition-all duration-200">
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-ruxchai-blue rounded-full flex items-center justify-center mr-2 sm:mr-3 flex-shrink-0">
                                                <i class="fas fa-key text-white text-sm"></i>
                                            </div>
                                            <a href="/api-keys/<%= apiKey.api_key_id %>" 
                                               class="text-sm font-medium text-ruxchai-blue hover:text-ruxchai-blue-700 truncate">
                                                <%= apiKey.app_name %>
                                            </a>
                                        </div>
                                        <!-- Mobile description shown under name -->
                                        <div class="sm:hidden mt-1 text-xs text-gray-500 truncate">
                                            <%= apiKey.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500 max-w-xs truncate" 
                                             title="<%= apiKey.description %>">
                                            <%= apiKey.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap">
                                        <% if (apiKey.permissions === 'read') { %>
                                            <span class="badge badge-primary text-xs">
                                                <i class="fas fa-eye mr-1"></i>
                                                <span class="hidden sm:inline">Read Only</span><span class="sm:hidden">Read</span>
                                            </span>
                                        <% } else if (apiKey.permissions === 'write') { %>
                                            <span class="badge badge-warning text-xs">
                                                <i class="fas fa-edit mr-1"></i>
                                                <span class="hidden sm:inline">Write Only</span><span class="sm:hidden">Write</span>
                                            </span>
                                        <% } else { %>
                                            <span class="badge badge-success text-xs">
                                                <i class="fas fa-check-double mr-1"></i>
                                                <span class="hidden sm:inline">Read & Write</span><span class="sm:hidden">R&W</span>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <%= apiKey.usage_count || 0 %> requests
                                        </div>
                                        <% if (apiKey.last_used_date) { %>
                                            <div class="text-xs text-gray-500">
                                                Last: <%= new Date(apiKey.last_used_date).toLocaleDateString() %>
                                            </div>
                                        <% } else { %>
                                            <div class="text-xs text-gray-500">Never used</div>
                                        <% } %>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap text-center">
                                        <% if (apiKey.is_active) { %>
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <i class="fas fa-check-circle mr-1"></i>
                                                <span class="hidden sm:inline">Active</span>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                <i class="fas fa-times-circle mr-1"></i>
                                                <span class="hidden sm:inline">Inactive</span>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="hidden md:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            <%= new Date(apiKey.created_date).toLocaleDateString() %>
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap text-center">
                                        <div class="flex justify-center space-x-1 sm:space-x-2">
                                            <a href="/api-keys/<%= apiKey.api_key_id %>" 
                                               class="inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 bg-ruxchai-blue text-white rounded-md hover:bg-ruxchai-blue-600 transition-all duration-200 shadow-sm touch-manipulation"
                                               title="View Details">
                                                <i class="fas fa-eye text-xs sm:mr-1"></i>
                                                <span class="hidden sm:inline text-xs">View</span>
                                            </a>
                                            <form action="/api-keys/<%= apiKey.api_key_id %>/toggle-status" 
                                                  method="POST" 
                                                  class="inline">
                                                <% if (typeof csrfToken !== 'undefined') { %>
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <% } %>
                                                <button type="submit" 
                                                        class="inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 bg-<%= apiKey.is_active ? 'yellow-500 hover:bg-yellow-600' : 'green-500 hover:bg-green-600' %> text-white rounded-md transition-all duration-200 shadow-sm touch-manipulation" 
                                                        title="<%= apiKey.is_active ? 'Deactivate' : 'Activate' %>"
                                                        onclick="return confirm('Are you sure you want to <%= apiKey.is_active ? 'deactivate' : 'activate' %> this API key?')">
                                                    <i class="fas fa-<%= apiKey.is_active ? 'pause' : 'play' %> text-xs sm:mr-1"></i>
                                                    <span class="hidden sm:inline text-xs"><%= apiKey.is_active ? 'Pause' : 'Start' %></span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                    No API keys found.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    <% } %>
</div>