<!-- Path: /views/api-keys/content.ejs -->
<div class="space-y-6">
    <!-- Page Header -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 fast-card mb-6">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-purple-500 via-purple-600 to-purple-700 rounded-2xl flex items-center justify-center shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 hover:rotate-2 border border-purple-400/20">
                        <span class="text-white text-3xl drop-shadow-xl filter brightness-110">üîë</span>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">
                            API Keys
                        </h1>
                        <p class="text-gray-600">Manage API keys for accessing the organization structure API</p>
                    </div>
                </div>
                <div>
                    <a href="/api-keys/new" class="btn btn-primary">
                        <span style="font-size: 1.125rem; margin-right: 0.5rem;">‚ûï</span>
                        ‡∏™‡∏£‡πâ‡∏≤‡∏á API Key ‡πÉ‡∏´‡∏°‡πà
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filters Section -->
    <div class="card-elevated fast-card mb-6">
        <div class="p-6">
            <div class="flex items-center space-x-3 mb-4">
                <span class="text-xl">üîç</span>
                <h2 class="text-lg font-semibold text-gray-900">
                    Search & Filter
                </h2>
            </div>
            <form method="get" action="/api-keys" class="fast-form grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <div>
                    <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-400">üîç</span>
                        </div>
                        <input type="text" 
                               name="search" 
                               id="search" 
                               value="<%= typeof query !== 'undefined' && query.search || '' %>"
                               placeholder="Search by app name..."
                               class="form-input-enhanced w-full pl-10">
                    </div>
                </div>
                
                <div>
                    <label for="permissions" class="block text-sm font-medium text-gray-700 mb-1">Permissions</label>
                    <select name="permissions" id="permissions" class="form-input-enhanced w-full">
                        <option value="">All Permissions</option>
                        <option value="read" <%= typeof query !== 'undefined' && query.permissions === 'read' ? 'selected' : '' %>>Read Only</option>
                        <option value="write" <%= typeof query !== 'undefined' && query.permissions === 'write' ? 'selected' : '' %>>Write Only</option>
                        <option value="read,write" <%= typeof query !== 'undefined' && query.permissions === 'read,write' ? 'selected' : '' %>>Read & Write</option>
                    </select>
                </div>
                
                <div>
                    <label for="is_active" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select name="is_active" id="is_active" class="form-input-enhanced w-full">
                        <option value="">All Status</option>
                        <option value="true" <%= typeof query !== 'undefined' && query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                        <option value="false" <%= typeof query !== 'undefined' && query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                
                <div class="sm:col-span-2 lg:col-span-3 flex items-end">
                    <button type="submit" class="btn btn-primary no-gradient w-full">
                        <span style="font-size: 0.875rem; margin-right: 0.5rem;">üîç</span>
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- API Keys Table -->
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg fast-table">
        <div class="overflow-x-auto -mx-4 sm:mx-0">
            <div class="inline-block min-w-full align-middle">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-purple-600 text-white">
                        <tr>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                üì± App Name
                            </th>
                            <th scope="col" class="hidden sm:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                üìã Description
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                üîí <span class="hidden sm:inline">Permissions</span><span class="sm:hidden">Perms</span>
                            </th>
                            <th scope="col" class="hidden lg:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                üìä Usage
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                üìä <span class="hidden sm:inline">Status</span>
                            </th>
                            <th scope="col" class="hidden md:table-cell px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                üìÖ Created
                            </th>
                            <th scope="col" class="px-3 py-3 sm:px-6 sm:py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                ‚öôÔ∏è <span class="hidden sm:inline">Actions</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (typeof apiKeys !== 'undefined' && apiKeys.length > 0) { %>
                            <% apiKeys.forEach(function(apiKey, index) { %>
                                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> hover:bg-purple-50 hover:shadow-md transition-all duration-200">
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-9 h-9 sm:w-10 sm:h-10 bg-gradient-to-br from-purple-500 to-purple-700 rounded-xl flex items-center justify-center mr-2 sm:mr-3 flex-shrink-0 shadow-md hover:shadow-lg transition-all duration-200">
                                                <span class="text-white text-sm sm:text-base drop-shadow-sm">üîë</span>
                                            </div>
                                            <a href="/api-keys/<%= apiKey.api_key_id %>" 
                                               class="text-sm font-medium text-purple-600 hover:text-purple-700 truncate">
                                                <%= apiKey.app_name %>
                                            </a>
                                        </div>
                                        <!-- Mobile description shown under name -->
                                        <div class="sm:hidden mt-1 text-xs text-gray-500 truncate">
                                            <%= apiKey.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500 max-w-xs truncate" 
                                             title="<%= apiKey.description %>">
                                            <%= apiKey.description || '-' %>
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap">
                                        <% if (apiKey.permissions === 'read') { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                <span class="mr-1">üëÅÔ∏è</span>
                                                <span class="hidden sm:inline">Read Only</span><span class="sm:hidden">Read</span>
                                            </span>
                                        <% } else if (apiKey.permissions === 'write') { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                <span class="mr-1">‚úèÔ∏è</span>
                                                <span class="hidden sm:inline">Write Only</span><span class="sm:hidden">Write</span>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                ‚úÖ
                                                <span class="hidden sm:inline">Read & Write</span><span class="sm:hidden">R&W</span>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="hidden lg:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <%= apiKey.usage_count || 0 %> requests
                                        </div>
                                        <% if (apiKey.last_used_date) { %>
                                            <div class="text-xs text-gray-500">
                                                Last: <%= new Date(apiKey.last_used_date).toLocaleDateString() %>
                                            </div>
                                        <% } else { %>
                                            <div class="text-xs text-gray-500">Never used</div>
                                        <% } %>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap text-center">
                                        <% if (apiKey.is_active) { %>
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                ‚úÖ
                                                <span class="hidden sm:inline">Active</span>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                ‚ùå
                                                <span class="hidden sm:inline">Inactive</span>
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="hidden md:table-cell px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            <%= new Date(apiKey.created_date).toLocaleDateString() %>
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 sm:px-6 whitespace-nowrap text-center">
                                        <div class="flex justify-center space-x-1 sm:space-x-2">
                                            <a href="/api-keys/<%= apiKey.api_key_id %>" 
                                               class="inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-all duration-200 shadow-sm touch-manipulation"
                                               title="View Details">
                                                <span class="text-xs sm:mr-1">üëÅÔ∏è</span>
                                                <span class="hidden sm:inline text-xs">View</span>
                                            </a>
                                            <form action="/api-keys/<%= apiKey.api_key_id %>/toggle-status" 
                                                  method="POST" 
                                                  class="inline toggle-form"
                                                  data-api-key-id="<%= apiKey.api_key_id %>"
                                                  data-action="<%= apiKey.is_active ? 'deactivate' : 'activate' %>">
                                                <% if (typeof csrfToken !== 'undefined') { %>
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <% } %>
                                                <button type="submit" 
                                                        class="toggle-button inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 <%= apiKey.is_active ? 'bg-orange-500 hover:bg-orange-600' : 'bg-green-500 hover:bg-green-600' %> text-white rounded-md transition-all duration-200 shadow-sm touch-manipulation" 
                                                        title="<%= apiKey.is_active ? 'Deactivate' : 'Activate' %>">
                                                    <span class="text-xs sm:mr-1"><%= apiKey.is_active ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è' %></span>
                                                    <span class="hidden sm:inline text-xs"><%= apiKey.is_active ? 'Pause' : 'Start' %></span>
                                                </button>
                                            </form>
                                            <a href="/api-keys/<%= apiKey.api_key_id %>/edit" 
                                               class="inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition-all duration-200 shadow-sm touch-manipulation"
                                               title="Edit">
                                                <span class="text-xs sm:mr-1">‚úèÔ∏è</span>
                                                <span class="hidden sm:inline text-xs">Edit</span>
                                            </a>
                                            <form method="POST" action="/api-keys/<%= apiKey.api_key_id %>/delete" style="display: inline-block;" class="delete-form" data-api-key-id="<%= apiKey.api_key_id %>">
                                                <input type="hidden" name="dev-csrf-token" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : 'dev-csrf-token' %>">
                                                <button type="submit"
                                                        class="delete-button inline-flex items-center justify-center w-8 h-8 sm:w-auto sm:h-auto sm:px-3 sm:py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-all duration-200 shadow-sm touch-manipulation"
                                                        title="Delete"
                                                        data-api-key-id="<%= apiKey.api_key_id %>">
                                                    <span class="text-xs sm:mr-1">üóëÔ∏è</span>
                                                    <span class="hidden sm:inline text-xs">Delete</span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                    No API keys found.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    <% } %>
</div>

<!-- Load external API Keys JavaScript -->
<script src="/assets/js/api-keys.js"></script>