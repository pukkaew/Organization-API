<!-- Path: /views/api-keys/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create API Key',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'api-keys',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                <i class="fas fa-key text-white text-xl"></i>
                            </div>
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">สร้าง API Key ใหม่</h1>
                                <p class="text-gray-600">เพิ่ม API Key ในระบบ</p>
                            </div>
                        </div>
                        <a href="/api-keys" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                            <i class="fas fa-arrow-left mr-2"></i>
                            ย้อนกลับ
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/api-keys" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                    
                    <!-- Error Messages -->
                    <%- include('../partials/form-errors', { 
                        error: typeof error !== 'undefined' ? error : null,
                        validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                    }) %>
                
                <div class="space-y-4">
                    <!-- Application Name -->
                    <div class="mb-6">
                        <label for="app_name" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-mobile-alt mr-2 text-ruxchai-blue"></i>
                            ชื่อแอปพลิเคชัน <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="app_name" 
                               name="app_name" 
                               required
                               maxlength="100"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="เช่น แอปมือถือ, เว็บพอร์ทัล">
                        <p class="mt-1 text-sm text-gray-500">
                            ชื่อที่อธิบายของแอปพลิเคชันที่จะใช้ API Key นี้
                        </p>
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-6">
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-edit mr-2 text-ruxchai-blue"></i>
                            คำอธิบาย
                        </label>
                        <textarea id="description" 
                                  name="description" 
                                  rows="3"
                                  maxlength="500"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                                  placeholder="คำอธิบายการใช้งาน API Key นี้ (เสริม)"></textarea>
                    </div>
                    
                    <!-- Permissions -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-lock mr-2 text-ruxchai-blue"></i>
                            สิทธิ์การเข้าถึง <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-2 space-y-4">
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="read" 
                                       required
                                       class="mt-1 text-ruxchai-blue">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">อ่านอย่างเดียว</span>
                                    <span class="block text-sm text-gray-500">
                                        สามารถดูข้อมูลได้เท่านั้น (GET requests)
                                    </span>
                                </div>
                            </label>
                            
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="write"
                                       class="mt-1 text-ruxchai-blue">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">เขียนอย่างเดียว</span>
                                    <span class="block text-sm text-gray-500">
                                        สามารถสร้าง/แก้ไข/ลบข้อมูลได้เท่านั้น (POST, PUT, DELETE requests)
                                    </span>
                                </div>
                            </label>
                            
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="read_write"
                                       checked
                                       class="mt-1 text-ruxchai-blue">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">อ่านและเขียน</span>
                                    <span class="block text-sm text-gray-500">
                                        สิทธิ์เข้าถึง API ทุกตัวอย่าง
                                    </span>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Expiration -->
                    <div class="mb-6">
                        <label for="expires_date" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-calendar mr-2 text-ruxchai-blue"></i>
                            วันหมดอายุ
                        </label>
                        <input type="date" 
                               id="expires_date" 
                               name="expires_date"
                               min="<%= new Date().toISOString().split('T')[0] %>"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                        <p class="mt-1 text-sm text-gray-500">
                            เว้นว่างไว้หากไม่ต้องการกำหนดอายุ
                        </p>
                    </div>
                    
                    <!-- Rate Limiting -->
                    <div class="mb-6">
                        <label for="rate_limit" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-clock mr-2 text-ruxchai-blue"></i>
                            ขีดจำกัดอัตรา (ครั้งต่อชั่วโมง)
                        </label>
                        <input type="number" 
                               id="rate_limit" 
                               name="rate_limit"
                               min="1"
                               max="10000"
                               value="1000"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                        <p class="mt-1 text-sm text-gray-500">
                            จำนวนครั้งสูงสุดที่อนุญาตให้เรียกใช้ API ต่อชั่วโมง
                        </p>
                    </div>
                    
                    <!-- IP Whitelist -->
                    <div class="mb-6">
                        <label for="ip_whitelist" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-ruxchai-blue"></i>
                            รายชื่อ IP ที่อนุญาต
                        </label>
                        <textarea id="ip_whitelist" 
                                  name="ip_whitelist" 
                                  rows="3"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                                  placeholder="192.168.1.1&#10;10.0.0.0/24&#10;(หนึ่ง IP หรือ CIDR ต่อบรรทัด)"></textarea>
                        <p class="mt-1 text-sm text-gray-500">
                            เสริม: จำกัดการใช้ API Key ให้เฉพาะ IP Address หรือช่วง IP ที่กำหนด
                        </p>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/api-keys" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ยกเลิก
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors font-medium">
                            <i class="fas fa-sync-alt mr-2"></i>
                            รีเซ็ต
                        </button>
                        <button type="submit" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium" id="submit-btn">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                สร้าง API Key
                            </span>
                            <span class="btn-loading hidden">
                                <i class="fas fa-spinner fa-spin mr-2"></i>
                                กำลังสร้าง...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                        <i class="fas fa-shield-alt text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-gray-900 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-ruxchai-blue"></i>
                        ข้อมูลความปลอดภัย
                    </h3>
                    <div class="mt-3 text-sm text-gray-600">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                API Key จะแสดงเพียงครั้งเดียวหลังจากสร้างเสร็จ
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                เก็บ API Key ไว้อย่างปลอดภัยและอย่าเปิดเผยใน client-side code
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                ใช้ HTTPS สำหรับคำขอ API ทั้งหมด
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                เปลี่ยน API Key เป็นประจำเพื่อความปลอดภัยที่ดีขึ้น
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>    
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function(e) {
        const submitBtn = document.getElementById('submit-btn');
        submitBtn.style.opacity = '0.7';
        
        const tempMessage = document.createElement('div');
        tempMessage.innerHTML = '<div class="fixed top-4 right-4 bg-blue-500 text-white px-4 py-2 rounded-lg shadow-lg z-50"><i class="fas fa-spinner fa-spin mr-2"></i>กำลังสร้าง API Key...</div>';
        document.body.appendChild(tempMessage);
    });
    </script>
    `
}) %>