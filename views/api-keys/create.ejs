<!-- Path: /views/api-keys/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create API Key',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'api-keys',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-2xl border border-gray-100">
                <div class="px-6 py-4 bg-gradient-to-r from-cyan-600 to-blue-700 rounded-t-2xl">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <i class="fas fa-key text-2xl mr-3"></i>
                            Create API Key
                        </h2>
                        <a href="/api-keys" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                            <i class="fas fa-times text-lg"></i>
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/api-keys" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                
                <div class="space-y-6">
                    <!-- Application Name -->
                    <div>
                        <label for="app_name" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-mobile-alt text-lg mr-2"></i>
                            Application Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="app_name" 
                               name="app_name" 
                               required
                               maxlength="100"
                               class="form-input focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., Mobile App, Web Portal">
                        <p class="mt-1 text-sm text-gray-500">
                            A descriptive name for the application using this API key
                        </p>
                    </div>
                    
                    <!-- Description -->
                    <div>
                        <label for="description" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-file-alt text-lg mr-2"></i>
                            Description
                        </label>
                        <textarea id="description" 
                                  name="description" 
                                  rows="3"
                                  maxlength="500"
                                  class="form-input focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 border-gray-300 transition-all duration-200"
                                  placeholder="Optional description of what this API key is used for"></textarea>
                    </div>
                    
                    <!-- Permissions -->
                    <div>
                        <label class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-lock text-lg mr-2"></i>
                            Permissions <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-2 space-y-4">
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="read" 
                                       required
                                       class="mt-1 text-primary-600 ">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">Read Only</span>
                                    <span class="block text-sm text-gray-500">
                                        Can only view data (GET requests)
                                    </span>
                                </div>
                            </label>
                            
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="write"
                                       class="mt-1 text-primary-600 ">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">Write Only</span>
                                    <span class="block text-sm text-gray-500">
                                        Can only create/update/delete data (POST, PUT, DELETE requests)
                                    </span>
                                </div>
                            </label>
                            
                            <label class="flex items-start">
                                <input type="radio" 
                                       name="permissions" 
                                       value="read_write"
                                       checked
                                       class="mt-1 text-primary-600 ">
                                <div class="ml-3">
                                    <span class="block text-sm font-medium text-gray-700">Read & Write</span>
                                    <span class="block text-sm text-gray-500">
                                        Full access to all API endpoints
                                    </span>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Expiration -->
                    <div>
                        <label for="expires_date" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-calendar text-lg mr-2"></i>
                            Expiration Date
                        </label>
                        <input type="date" 
                               id="expires_date" 
                               name="expires_date"
                               min="<%= new Date().toISOString().split('T')[0] %>"
                               class="form-input focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 border-gray-300 transition-all duration-200">
                        <p class="mt-1 text-sm text-gray-500">
                            Leave empty for no expiration
                        </p>
                    </div>
                    
                    <!-- Rate Limiting -->
                    <div>
                        <label for="rate_limit" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-clock text-lg mr-2"></i>
                            Rate Limit (requests per hour)
                        </label>
                        <input type="number" 
                               id="rate_limit" 
                               name="rate_limit"
                               min="1"
                               max="10000"
                               value="1000"
                               class="form-input focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 border-gray-300 transition-all duration-200">
                        <p class="mt-1 text-sm text-gray-500">
                            Maximum number of API requests allowed per hour
                        </p>
                    </div>
                    
                    <!-- IP Whitelist -->
                    <div>
                        <label for="ip_whitelist" class="form-label text-gray-800 font-semibold flex items-center">
                            <i class="fas fa-globe text-lg mr-2"></i>
                            IP Whitelist
                        </label>
                        <textarea id="ip_whitelist" 
                                  name="ip_whitelist" 
                                  rows="3"
                                  class="form-input focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 border-gray-300 transition-all duration-200"
                                  placeholder="192.168.1.1&#10;10.0.0.0/24&#10;(one IP or CIDR per line)"></textarea>
                        <p class="mt-1 text-sm text-gray-500">
                            Optional: Restrict API key usage to specific IP addresses or ranges
                        </p>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/api-keys" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <button type="submit" id="submit-btn" class="btn bg-gradient-to-r from-cyan-600 to-blue-700 hover:from-cyan-700 hover:to-blue-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        <span class="btn-text">
                            <i class="fas fa-key mr-2"></i>
                            Generate API Key
                        </span>
                        <span class="btn-loading hidden">
                            <i class="spinner mr-2"></i>
                            Generating...
                        </span>
                    </button>
                </div>
            </form>
        </div>
        
        <!-- Security Notice -->
        <div class="mt-6 bg-gradient-to-r from-cyan-50 to-blue-50 rounded-2xl p-6 border border-cyan-100 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="fas fa-lock text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-cyan-800 flex items-center">
                        <i class="fas fa-shield-alt mr-2"></i>
                        Security Notice
                    </h3>
                    <div class="mt-3 text-sm text-cyan-700">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-cyan-500 mr-2 mt-0.5">•</span>
                                The API key will only be shown once after creation
                            </li>
                            <li class="flex items-start">
                                <span class="text-cyan-500 mr-2 mt-0.5">•</span>
                                Store the API key securely and never expose it in client-side code
                            </li>
                            <li class="flex items-start">
                                <span class="text-cyan-500 mr-2 mt-0.5">•</span>
                                Use HTTPS for all API requests
                            </li>
                            <li class="flex items-start">
                                <span class="text-cyan-500 mr-2 mt-0.5">•</span>
                                Rotate API keys regularly for better security
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>    
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    `
}) %>