<!-- Path: /views/divisions/edit.ejs -->
<%- include('../partials/header', { 
    title: 'Edit Division',
    activeMenu: 'divisions'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'divisions',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                <i class="fas fa-sitemap text-white text-xl"></i>
                            </div>
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">แก้ไขฝ่าย</h1>
                                <p class="text-gray-600">แก้ไขข้อมูลฝ่ายในระบบ</p>
                            </div>
                        </div>
                        <a href="/divisions" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                            <i class="fas fa-arrow-left mr-2"></i>
                            ย้อนกลับ
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/divisions/<%= division.division_code %>" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                    <input type="hidden" name="_method" value="PUT">
                    
                    <!-- Error Messages -->
                    <%- include('../partials/form-errors', { 
                        error: typeof error !== 'undefined' ? error : null,
                        validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                    }) %>
                    
                    <div class="space-y-4">
                        <!-- Division Code (Read-only) -->
                        <div class="mb-6">
                            <label for="division_code" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-tag mr-2 text-ruxchai-blue"></i>
                                รหัสฝ่าย
                            </label>
                            <input type="text" 
                                   id="division_code" 
                                   value="<%= division.division_code %>" 
                                   disabled
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed">
                            <p class="mt-1 text-sm text-gray-500">
                                รหัสฝ่ายไม่สามารถเปลี่ยนแปลงได้
                            </p>
                        </div>
                        
                        <!-- Company (Read-only) -->
                        <div class="mb-6">
                            <label for="company_display" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                                บริษัท
                            </label>
                            <input type="text" 
                                   id="company_display" 
                                   value="<%= division.company_code %>" 
                                   disabled
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-100 cursor-not-allowed">
                            <p class="mt-1 text-sm text-gray-500">
                                บริษัทไม่สามารถเปลี่ยนแปลงได้
                            </p>
                        </div>
                        
                        <!-- Division Name -->
                        <div class="mb-6">
                            <label for="division_name" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-sitemap mr-2 text-ruxchai-blue"></i>
                                ชื่อฝ่าย <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                   id="division_name" 
                                   name="division_name" 
                                   required
                                   maxlength="200"
                                   value="<%= division.division_name %>"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                        </div>
                        
                        <!-- Branch -->
                        <div class="mb-6">
                            <label for="branch_code" class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-code-branch mr-2 text-ruxchai-blue"></i>
                                สาขา
                            </label>
                            <select id="branch_code" 
                                    name="branch_code" 
                                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                                <option value="">เลือกสาขา (เสริม)</option>
                                <% if (typeof branches !== 'undefined' && branches) { %>
                                    <% branches.forEach(branch => { %>
                                        <option value="<%= branch.branch_code %>" 
                                                <%= division.branch_code === branch.branch_code ? 'selected' : '' %>>
                                            <%= branch.branch_code %> - <%= branch.branch_name %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                            <p class="mt-1 text-sm text-gray-500">
                                เลือกสาขาสำหรับฝ่ายนี้ หรือเว้นว่างไว้สำหรับฝ่ายระดับบริษัท
                            </p>
                        </div>
                        
                        <!-- Status Notice -->
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-info-circle text-ruxchai-blue"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-blue-700">
                                        สถานะปัจจุบัน: <strong><%= division.is_active ? 'ใช้งาน' : 'ไม่ใช้งาน' %></strong>
                                    </p>
                                    <p class="text-sm text-blue-600 mt-1">
                                        หากต้องการเปลี่ยนสถานะ ให้ใช้ปุ่มเปิด/ปิดในหน้ารายการฝ่าย
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Metadata -->
                        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                            <div class="grid grid-cols-2 gap-4 text-sm">
                                <div>
                                    <span class="text-gray-500">วันที่สร้าง:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(division.created_date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                                <div>
                                    <span class="text-gray-500">สร้างโดย:</span>
                                    <span class="text-gray-900 ml-2"><%= division.created_by %></span>
                                </div>
                                <% if (division.updated_date) { %>
                                    <div>
                                        <span class="text-gray-500">แก้ไขล่าสุด:</span>
                                        <span class="text-gray-900 ml-2">
                                            <%= new Date(division.updated_date).toLocaleString('th-TH') %>
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-gray-500">แก้ไขโดย:</span>
                                        <span class="text-gray-900 ml-2"><%= division.updated_by %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/divisions" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ยกเลิก
                    </a>
                    
                    <button type="submit" id="submit-btn" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium">
                        <span class="btn-text">
                            <i class="fas fa-save mr-2"></i>
                            บันทึกการเปลี่ยนแปลง
                        </span>
                        <span class="btn-loading hidden">
                            <i class="fas fa-spinner fa-spin mr-2"></i>
                            กำลังบันทึก...
                        </span>
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    `
}) %>