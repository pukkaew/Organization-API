<!-- Path: /views/divisions/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Division',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'divisions',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="w-12 h-12 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                <i class="fas fa-sitemap text-white text-xl"></i>
                            </div>
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">สร้างฝ่ายใหม่</h1>
                                <p class="text-gray-600">เพิ่มข้อมูลฝ่ายในระบบ</p>
                            </div>
                        </div>
                        <a href="/divisions" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                            <i class="fas fa-arrow-left mr-2"></i>
                            ย้อนกลับ
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/divisions" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                    
                    <!-- Error Messages -->
                    <%- include('../partials/form-errors', { 
                        error: typeof error !== 'undefined' ? error : null,
                        validationErrors: typeof validationErrors !== 'undefined' ? validationErrors : null
                    }) %>
                
                <div class="space-y-4">
                    <!-- Company Selection -->
                    <div class="mb-6">
                        <label for="company_code" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                            บริษัท <span class="text-red-500">*</span>
                        </label>
                        <select id="company_code" 
                                name="company_code" 
                                required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                            <option value="">เลือกบริษัท</option>
                            <% if (typeof companies !== 'undefined' && companies) { %>
                                <% companies.forEach(function(company) { %>
                                    <option value="<%= company.company_code %>">
                                        <%= company.company_code %> - <%= company.company_name_th %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    
                    <!-- Branch Selection -->
                    <div class="mb-6">
                        <label for="branch_code" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-code-branch mr-2 text-ruxchai-blue"></i>
                            สาขา
                        </label>
                        <select id="branch_code" 
                                name="branch_code"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue">
                            <option value="">ระดับบริษัท (ไม่มีสาขา)</option>
                        </select>
                        <p class="mt-1 text-sm text-gray-500">
                            เว้นว่างไว้หากฝ่ายนี้อยู่ในระดับบริษัท
                        </p>
                    </div>
                    
                    <!-- Division Code -->
                    <div class="mb-6">
                        <label for="division_code" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-tag mr-2 text-ruxchai-blue"></i>
                            รหัสฝ่าย <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="division_code" 
                               name="division_code" 
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue uppercase"
                               placeholder="เช่น DIV001">
                        <p class="mt-1 text-sm text-gray-500">
                            ใช้ตัวอักษรพิมพ์ใหญ่และตัวเลขเท่านั้น ไม่สามารถเปลี่ยนแปลงได้ภายหลัง
                        </p>
                    </div>
                    
                    <!-- Division Name -->
                    <div class="mb-6">
                        <label for="division_name" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-sitemap mr-2 text-ruxchai-blue"></i>
                            ชื่อฝ่าย <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="division_name" 
                               name="division_name" 
                               required
                               maxlength="200"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-ruxchai-blue focus:border-ruxchai-blue"
                               placeholder="เช่น ฝ่ายทรัพยากรบุคคล">
                    </div>
                    
                    <!-- Status -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-toggle-on mr-2 text-ruxchai-blue"></i>
                            สถานะ
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ใช้งาน</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-ruxchai-blue">
                                <span class="ml-2 text-sm text-gray-700">ไม่ใช้งาน</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/divisions" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition-colors font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        ยกเลิก
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition-colors font-medium">
                            <i class="fas fa-sync-alt mr-2"></i>
                            รีเซ็ต
                        </button>
                        <button type="submit" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium" id="submit-btn">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                บันทึกฝ่าย
                            </span>
                            <span class="btn-loading hidden">
                                <i class="fas fa-spinner fa-spin mr-2"></i>
                                กำลังบันทึก...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                        <i class="fas fa-lightbulb text-white text-xl"></i>
                    </div>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-gray-900 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-ruxchai-blue"></i>
                        คำแนะนำ
                    </h3>
                    <div class="mt-3 text-sm text-gray-600">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                รหัสฝ่ายไม่สามารถเปลี่ยนแปลงได้หลังจากสร้างแล้ว
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                ฝ่ายสามารถอยู่ในระดับบริษัทหรือภายใต้สาขาเฉพาะ
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                รหัสฝ่ายต้องไม่ซ้ำกันในทั้งระบบ
                            </li>
                            <li class="flex items-start">
                                <span class="text-ruxchai-blue mr-2 mt-0.5">•</span>
                                ฝ่ายทุกแห่งจะเริ่มต้นเป็น "ใช้งาน" เป็นค่าเริ่มต้น
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Auto uppercase for division code
    document.getElementById('division_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Load branches when company is selected
    document.getElementById('company_code').addEventListener('change', function() {
        const companyCode = this.value;
        const branchSelect = document.getElementById('branch_code');
        
        // Clear branch options
        branchSelect.innerHTML = '<option value="">Company Level (No Branch)</option>';
        
        if (companyCode) {
            // Fetch branches for selected company
            fetch(\`/api/companies/\${companyCode}/branches\`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data) {
                        data.data.forEach(branch => {
                            const option = document.createElement('option');
                            option.value = branch.branch_code;
                            option.textContent = \`\${branch.branch_code} - \${branch.branch_name}\`;
                            if (branch.is_headquarters) {
                                option.textContent += ' (Headquarters)';
                            }
                            branchSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error loading branches:', error);
                });
        }
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function(e) {
        const submitBtn = document.getElementById('submit-btn');
        submitBtn.style.opacity = '0.7';
        
        const tempMessage = document.createElement('div');
        tempMessage.innerHTML = '<div class="fixed top-4 right-4 bg-blue-500 text-white px-4 py-2 rounded-lg shadow-lg z-50"><i class="fas fa-spinner fa-spin mr-2"></i>กำลังสร้างดิวิชั่น...</div>';
        document.body.appendChild(tempMessage);
    });
    </script>
    `
}) %>