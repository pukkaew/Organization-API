    <!-- Page Header -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 fast-card mb-6">
        <div class="p-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 via-indigo-600 to-indigo-700 rounded-2xl flex items-center justify-center shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 hover:rotate-2 border border-indigo-400/20">
                        <span class="text-white text-3xl drop-shadow-xl filter brightness-110"><i class="fas fa-sitemap"></i></span>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">
                            Divisions
                        </h1>
                        <p class="text-gray-600">Manage organizational divisions across companies and branches</p>
                    </div>
                </div>
                <div>
                    <a href="/divisions/new" class="btn btn-primary">
                        <span style="font-size: 1.125rem; margin-right: 0.5rem;">‚ûï</span>
                        ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ù‡πà‡∏≤‡∏¢‡πÉ‡∏´‡∏°‡πà
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filters Section -->
    <div class="card-elevated fast-card mb-6">
        <div class="p-6">
            <div class="flex items-center space-x-3 mb-4">
                <span class="text-xl">üîç</span>
                <h2 class="text-lg font-semibold text-gray-900">
                    Search & Filter
                </h2>
            </div>
            <form method="get" action="/divisions" class="fast-form grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <div>
                    <label for="search" class="block text-sm font-medium text-gray-700 mb-1">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" 
                               name="search" 
                               id="search" 
                               value="<%= typeof query !== 'undefined' && query.search || '' %>"
                               placeholder="Search by code or name..."
                               class="form-input-enhanced w-full pl-10">
                    </div>
                </div>
                
                <div>
                    <label for="company_code" class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                    <select name="company_code" id="company_code" class="form-input-enhanced w-full">
                        <option value="">All Companies</option>
                        <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                            <% companies.forEach(function(company) { %>
                                <option value="<%= company.company_code %>" <%= typeof query !== 'undefined' && query.company_code === company.company_code ? 'selected' : '' %>>
                                    <%= company.company_code %> - <%= company.company_name_th || company.company_name_en || '' %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                
                <div>
                    <label for="branch_code" class="block text-sm font-medium text-gray-700 mb-1">Branch</label>
                    <select name="branch_code" id="branch_code" class="form-input-enhanced w-full">
                        <option value="">All Branches</option>
                        <option value="null">Company Level (No Branch)</option>
                        <% if (typeof branches !== 'undefined' && branches.length > 0) { %>
                            <% branches.forEach(function(branch) { %>
                                <option value="<%= branch.branch_code %>" <%= typeof query !== 'undefined' && query.branch_code === branch.branch_code ? 'selected' : '' %>>
                                    <%= branch.branch_code %> - <%= branch.branch_name %><%= branch.is_headquarters ? ' (HQ)' : '' %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                
                <div>
                    <label for="is_active" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select name="is_active" id="is_active" class="form-input-enhanced w-full">
                        <option value="">All Status</option>
                        <option value="true" <%= typeof query !== 'undefined' && query.is_active === 'true' ? 'selected' : '' %>>Active</option>
                        <option value="false" <%= typeof query !== 'undefined' && query.is_active === 'false' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                
                <div class="sm:col-span-2 lg:col-span-4 flex items-end">
                    <button type="submit" class="btn btn-primary no-gradient w-full">
                        <span style="font-size: 0.875rem; margin-right: 0.5rem;">üîç</span>
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Divisions Table -->
    <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg fast-table">
        <div class="overflow-x-auto">
            <div class="table-wrapper">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-indigo-600 text-white">
                        <tr>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-map mr-2"></i>Division Code
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-folder mr-2"></i>Division Name
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-building mr-2"></i>Company
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-code-branch mr-2"></i>Branch
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-users mr-2"></i>Departments
                            </th>
                            <th scope="col" class="px-6 py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-chart-bar mr-2"></i>Status
                            </th>
                            <th scope="col" class="px-6 py-4 text-center text-xs font-bold text-white uppercase tracking-wider">
                                <i class="fas fa-cogs mr-2"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (typeof divisions !== 'undefined' && divisions.length > 0) { %>
                            <% divisions.forEach(function(division, index) { %>
                                <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %> hover:bg-blue-50 hover:shadow-md transition-all duration-200">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-indigo-700 rounded-xl flex items-center justify-center mr-3 shadow-md hover:shadow-lg transition-all duration-200">
                                                <span class="text-white text-base drop-shadow-sm"><i class="fas fa-sitemap"></i></span>
                                            </div>
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= division.division_code %>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            <%= division.division_name %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            <%= division.company_code %> - <%= division.company_name %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (division.branch_code) { %>
                                            <div class="text-sm text-gray-500">
                                                <%= division.branch_code %> - <%= division.branch_name %>
                                            </div>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                <i class="fas fa-building"></i>
                                                Company Level
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (division.department_count > 0) { %>
                                            <a href="/departments?division_code=<%= division.division_code %>" 
                                               class="text-sm text-blue-600 hover:text-blue-900 font-medium">
                                                <%= division.department_count %> departments
                                            </a>
                                        <% } else { %>
                                            <span class="text-sm text-gray-500">No departments</span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <% if (division.is_active) { %>
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                                <i class="fas fa-check-circle"></i>
                                                Active
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
                                                <i class="fas fa-times-circle"></i>
                                                Inactive
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex justify-center space-x-1 sm:space-x-2">
                                            <a href="/divisions/<%= division.division_code %>" 
                                               class="inline-flex items-center px-2 sm:px-3 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-all duration-200 shadow-sm"
                                               title="View Details">
                                                <span class="text-sm sm:text-base"><i class="fas fa-eye"></i></span>
                                            </a>
                                            <a href="/divisions/<%= division.division_code %>/edit" 
                                               class="inline-flex items-center px-2 sm:px-3 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition-all duration-200 shadow-sm"
                                               title="Edit">
                                                <span class="text-sm sm:text-base"><i class="fas fa-edit"></i></span>
                                            </a>
                                            <form action="/divisions/<%= division.division_code %>/toggle-status" 
                                                  method="POST" 
                                                  class="inline">
                                                <% if (typeof csrfToken !== 'undefined') { %>
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <% } %>
                                                <button type="submit" 
                                                        class="inline-flex items-center px-2 sm:px-3 py-2 bg-<%= division.is_active ? 'orange-500 hover:bg-orange-600' : 'green-500 hover:bg-green-600' %> text-white rounded-md transition-all duration-200 shadow-sm" 
                                                        title="<%= division.is_active ? 'Deactivate' : 'Activate' %>"
                                                        onclick="return confirm('Are you sure you want to <%= division.is_active ? 'deactivate' : 'activate' %> this division?')">
                                                    <span class="text-sm sm:text-base"><i class="fas fa-power-off"></i></span>
                                                </button>
                                            </form>
                                            <form method="POST" action="/divisions/<%= division.division_code %>/delete" style="display: inline-block;">
                                                <input type="hidden" name="dev-csrf-token" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : 'dev-csrf-token' %>">
                                                <button type="submit"
                                                        class="inline-flex items-center px-2 sm:px-3 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-all duration-200 shadow-sm"
                                                        title="Delete"
                                                        onclick="return confirm('Are you sure you want to delete division <%= division.division_code %>?')">
                                                    <span class="text-sm sm:text-base"><i class="fas fa-trash-alt"></i></span>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                                    No divisions found.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Pagination -->
    <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    <% } %>
</div>

<script>
    // Dynamic branch loading based on company selection
    document.getElementById('company_code').addEventListener('change', function() {
        const companyCode = this.value;
        const branchSelect = document.getElementById('branch_code');
        
        // Clear existing options except the first two
        branchSelect.innerHTML = '<option value="">All Branches</option><option value="null">Company Level (No Branch)</option>';
        
        if (companyCode) {
            // Fetch branches for selected company
            fetch('/api/companies/' + companyCode + '/branches')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data) {
                        data.data.forEach(branch => {
                            const option = document.createElement('option');
                            option.value = branch.branch_code;
                            option.textContent = branch.branch_code + ' - ' + branch.branch_name;
                            if (branch.is_headquarters) {
                                option.textContent += ' (HQ)';
                            }
                            branchSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => console.error('Error loading branches:', error));
        }
    });
    
    // Trigger change event on page load if company is pre-selected
    if (document.getElementById('company_code').value) {
        document.getElementById('company_code').dispatchEvent(new Event('change'));
    }
</script>
    </div>