<!-- Path: /views/divisions/content.ejs -->
<!-- Page Header -->
<div class="mb-8">
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">ฝ่าย</h1>
                <p class="text-gray-600">จัดการข้อมูลฝ่ายทั้งหมดในองค์กร</p>
            </div>
            <a href="/divisions/new" class="bg-ruxchai-blue text-white px-4 py-2 rounded-lg hover:bg-ruxchai-blue-dark transition-colors font-medium">
                <i class="fas fa-plus mr-2"></i>
                เพิ่มฝ่ายใหม่
            </a>
        </div>
    </div>
</div>

<!-- Filters Section -->
<%- include('../partials/filter-card', { 
    action: '/divisions',
    filters: typeof query !== 'undefined' ? query : {},
    entityType: 'divisions',
    companies: typeof companies !== 'undefined' ? companies : [],
    branches: typeof branches !== 'undefined' ? branches : []
}) %>

<!-- Divisions Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-200">
    <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                <i class="fas fa-table text-white"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900">รายการฝ่าย</h3>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-sitemap mr-2 text-ruxchai-blue"></i>
                        รหัสฝ่าย
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-signature mr-2 text-ruxchai-blue"></i>
                        ชื่อฝ่าย
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-building mr-2 text-ruxchai-blue"></i>
                        บริษัท
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-code-branch mr-2 text-ruxchai-blue"></i>
                        สาขา
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-users mr-2 text-ruxchai-blue"></i>
                        แผนก
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-toggle-on mr-2 text-ruxchai-blue"></i>
                        สถานะ
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                        <i class="fas fa-cogs mr-2 text-ruxchai-blue"></i>
                        การดำเนินการ
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (typeof divisions !== 'undefined' && divisions.length > 0) { %>
                    <% divisions.forEach(function(division, index) { %>
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-ruxchai-blue rounded-lg flex items-center justify-center">
                                        <i class="fas fa-sitemap text-white"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-base font-bold text-gray-900">
                                            <%= division.division_code %>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= division.division_name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= division.company_code %>
                                </div>
                                <div class="text-sm text-gray-500">
                                    <%= division.company_name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (division.branch_code) { %>
                                    <div class="text-base font-bold text-gray-900">
                                        <%= division.branch_code %>
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <%= division.branch_name %>
                                    </div>
                                <% } else { %>
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                        <i class="fas fa-building mr-1"></i>
                                        ระดับบริษัท
                                    </span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <% if (division.department_count > 0) { %>
                                    <a href="/departments?division_code=<%= division.division_code %>" 
                                       class="text-base font-bold text-ruxchai-blue hover:text-ruxchai-blue-dark">
                                        <%= division.department_count %> แผนก
                                    </a>
                                <% } else { %>
                                    <div class="text-base text-gray-400">0 แผนก</div>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <%- include('../partials/status-badge', { isActive: division.is_active }) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="flex justify-center space-x-2">
                                    <%- include('../partials/action-buttons', { 
                                        entity: 'divisions', 
                                        code: division.division_code, 
                                        isActive: division.is_active,
                                        csrfToken: typeof csrfToken !== 'undefined' ? csrfToken : null
                                    }) %>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-sitemap text-gray-400 text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">ไม่พบฝ่าย</h3>
                            <p class="text-gray-600">เริ่มต้นด้วยการสร้างฝ่ายแรกของคุณ</p>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
    <div class="mt-6">
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    </div>
<% } %>

