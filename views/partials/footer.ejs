    <!-- Main JavaScript -->
    <script src="/assets/js/app.js"></script>
    
    <!-- Enhanced interactions and animations -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                    
                    // Add animation classes
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('animate-slide-up');
                    }
                });
            }
            
            // Add staggered animations to cards and lists
            const cards = document.querySelectorAll('.bg-gradient-to-br, .bg-white');
            cards.forEach((card, index) => {
                if (card.classList.contains('rounded-xl') || card.classList.contains('rounded-lg')) {
                    card.style.animationDelay = `${index * 0.1}s`;
                    card.classList.add('animate-slide-up');
                }
            });
            
            // Add reveal on scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('revealed');
                    }
                });
            }, observerOptions);
            
            // Observe elements for reveal animations
            const revealElements = document.querySelectorAll('.bg-gradient-to-br');
            revealElements.forEach(el => {
                el.classList.add('reveal-on-scroll');
                observer.observe(el);
            });
            
            // Add loading shimmer to tables while they load
            const tables = document.querySelectorAll('table');
            tables.forEach(table => {
                // Remove loading class after content loads
                setTimeout(() => {
                    table.classList.remove('loading-placeholder');
                }, 500);
            });
            
            // Enhanced button interactions
            const buttons = document.querySelectorAll('button, .btn, a[href]');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
                
                button.addEventListener('mousedown', function() {
                    this.style.transform = 'translateY(0) scale(0.98)';
                });
                
                button.addEventListener('mouseup', function() {
                    this.style.transform = 'translateY(-2px) scale(1)';
                });
            });
            
            // Add page load animation
            document.body.classList.add('animate-fade-in');
            
            // Add gradient animation to headers
            const gradientHeaders = document.querySelectorAll('.bg-gradient-to-r');
            gradientHeaders.forEach(header => {
                if (header.classList.contains('from-blue-600') || 
                    header.classList.contains('from-emerald-600') ||
                    header.classList.contains('from-purple-600') ||
                    header.classList.contains('from-violet-600')) {
                    header.classList.add('animate-gradient');
                }
            });
        });
    </script>
    
