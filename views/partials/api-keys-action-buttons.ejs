<%# API Keys Action Buttons Partial %>
<%# Usage: include('../partials/api-keys-action-buttons', { 
    apiKeyId: apiKey.api_key_id, 
    isActive: apiKey.is_active,
    csrfToken: csrfToken 
}) %>

<div class="flex justify-center space-x-1 sm:space-x-2">
    <!-- View Button -->
    <a href="/api-keys/<%= apiKeyId %>" 
       class="action-btn action-btn-blue" 
       title="View Details" 
       aria-label="View API key details for <%= apiKeyId %>">
        <i class="fas fa-eye" aria-hidden="true"></i>
    </a>
    
    <!-- Toggle Status Button -->
    <form action="/api-keys/<%= apiKeyId %>/toggle-status" 
          method="POST" 
          class="inline-block toggle-form"
          data-api-key-id="<%= apiKeyId %>"
          data-action="<%= isActive ? 'deactivate' : 'activate' %>">
        <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% } %>
        <button type="submit" 
                class="action-btn <%= isActive ? 'action-btn-orange' : 'action-btn-emerald' %> toggle-button" 
                title="<%= isActive ? 'Deactivate' : 'Activate' %> API Key" 
                aria-label="<%= isActive ? 'Deactivate' : 'Activate' %> API key <%= apiKeyId %>">
            <i class="fas fa-<%= isActive ? 'pause' : 'play' %>" aria-hidden="true"></i>
        </button>
    </form>
    
    <!-- Edit Button -->
    <a href="/api-keys/<%= apiKeyId %>/edit" 
       class="action-btn action-btn-amber" 
       title="Edit API Key" 
       aria-label="Edit API key <%= apiKeyId %>">
        <i class="fas fa-edit" aria-hidden="true"></i>
    </a>
    
    <!-- Delete Button -->
    <form method="POST" action="/api-keys/<%= apiKeyId %>/delete" class="inline-block delete-form" data-api-key-id="<%= apiKeyId %>">
        <input type="hidden" name="dev-csrf-token" value="<%= typeof csrfToken !== 'undefined' && csrfToken ? csrfToken : 'dev-csrf-token' %>">
        <button type="submit" 
                class="action-btn action-btn-red delete-button" 
                title="Delete API Key" 
                aria-label="Delete API key <%= apiKeyId %>"
                data-api-key-id="<%= apiKeyId %>">
            <i class="fas fa-trash-alt" aria-hidden="true"></i>
        </button>
    </form>
</div>