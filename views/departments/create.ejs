<!-- Path: /views/departments/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Department',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'departments',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-2xl border border-gray-100">
                <div class="px-6 py-4 bg-gradient-to-r from-purple-600 to-violet-700 rounded-t-2xl">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <span class="text-2xl mr-3"><i class="fas fa-building"></i></span>
                            Create New Department
                        </h2>
                        <a href="/departments" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                            <i class="fas fa-times text-lg"></i>
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/departments" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                
                <div class="space-y-6">
                    <!-- Company Selection -->
                    <div>
                        <label for="company_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2"><i class="fas fa-building"></i></span>
                            Company <span class="text-red-500">*</span>
                        </label>
                        <select id="company_code" 
                                name="company_code" 
                                required
                                class="form-input focus:ring-2 focus:ring-purple-500 focus:border-purple-500 border-gray-300 transition-all duration-200">
                            <option value="">Select a company</option>
                            <% if (typeof companies !== 'undefined' && companies) { %>
                                <% companies.forEach(function(company) { %>
                                    <option value="<%= company.company_code %>">
                                        <%= company.company_code %> - <%= company.company_name_th %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    
                    <!-- Division Selection -->
                    <div>
                        <label for="division_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2"><i class="fas fa-building"></i></span>
                            Division <span class="text-red-500">*</span>
                        </label>
                        <select id="division_code" 
                                name="division_code" 
                                required
                                class="form-input focus:ring-2 focus:ring-purple-500 focus:border-purple-500 border-gray-300 transition-all duration-200">
                            <option value="">Select a company first</option>
                        </select>
                        <p class="mt-1 text-sm text-gray-500">
                            Select the division this department belongs to
                        </p>
                    </div>
                    
                    <!-- Department Code -->
                    <div>
                        <label for="department_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2"><i class="fas fa-tag"></i></span>
                            Department Code <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="department_code" 
                               name="department_code" 
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="form-input uppercase focus:ring-2 focus:ring-purple-500 focus:border-purple-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., DEPT001">
                        <p class="mt-1 text-sm text-gray-500">
                            Use uppercase letters and numbers only. This cannot be changed later.
                        </p>
                    </div>
                    
                    <!-- Department Name -->
                    <div>
                        <label for="department_name" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">ðŸ’¼</span>
                            Department Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="department_name" 
                               name="department_name" 
                               required
                               maxlength="200"
                               class="form-input focus:ring-2 focus:ring-purple-500 focus:border-purple-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., Recruitment">
                    </div>
                    
                    <!-- Status -->
                    <div>
                        <label class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">âš¡</span>
                            Status
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Active</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Inactive</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/departments" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="btn btn-outline border-gray-300 text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
                            <i class="fas fa-redo mr-2"></i>
                            Reset
                        </button>
                        <button type="submit" id="submit-btn" class="btn bg-gradient-to-r from-purple-600 to-violet-700 hover:from-purple-700 hover:to-violet-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                Create Department
                            </span>
                            <span class="btn-loading hidden">
                                <i class="spinner mr-2"></i>
                                Creating...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-gradient-to-r from-purple-50 to-violet-50 rounded-2xl p-6 border border-purple-100 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <span class="text-2xl"><i class="fas fa-lightbulb"></i></span>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-purple-800 flex items-center">
                        <span class="mr-2"><i class="fas fa-book"></i></span>
                        Guidelines
                    </h3>
                    <div class="mt-3 text-sm text-purple-700">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-purple-500 mr-2 mt-0.5">â€¢</span>
                                Department code cannot be changed after creation
                            </li>
                            <li class="flex items-start">
                                <span class="text-purple-500 mr-2 mt-0.5">â€¢</span>
                                Department must belong to a division
                            </li>
                            <li class="flex items-start">
                                <span class="text-purple-500 mr-2 mt-0.5">â€¢</span>
                                Department code must be unique across the entire system
                            </li>
                            <li class="flex items-start">
                                <span class="text-purple-500 mr-2 mt-0.5">â€¢</span>
                                All departments start as active by default
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Auto uppercase for department code
    document.getElementById('department_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Load divisions when company is selected
    document.getElementById('company_code').addEventListener('change', function() {
        const companyCode = this.value;
        const divisionSelect = document.getElementById('division_code');
        
        // Clear division options
        divisionSelect.innerHTML = '<option value="">Select a division</option>';
        
        if (companyCode) {
            // Fetch divisions for selected company
            fetch(\`/api/companies/\${companyCode}/divisions\`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data) {
                        data.data.forEach(division => {
                            const option = document.createElement('option');
                            option.value = division.division_code;
                            option.textContent = \`\${division.division_code} - \${division.division_name}\`;
                            divisionSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error loading divisions:', error);
                });
        }
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    `
}) %>