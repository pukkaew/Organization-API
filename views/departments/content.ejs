<!-- Path: /views/departments/content.ejs -->
<!-- Flash Messages -->
<%- include('../partials/flash-messages') %>

<!-- Page Header -->
<div class="mb-8">
    <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-2">แผนก</h1>
                <p class="text-gray-600">จัดการข้อมูลแผนกทั้งหมดในองค์กร</p>
            </div>
            <a href="/departments/new" class="bg-ruxchai-green text-white px-4 py-2 rounded-lg hover:bg-ruxchai-green-dark transition-colors font-medium">
                <i class="fas fa-plus mr-2"></i>
                เพิ่มแผนกใหม่
            </a>
        </div>
    </div>
</div>

<!-- Filters Section -->
<%- include('../partials/filter-card', { 
    action: '/departments',
    filters: typeof query !== 'undefined' ? query : {},
    entityType: 'departments',
    companies: typeof companies !== 'undefined' ? companies : [],
    divisions: typeof divisions !== 'undefined' ? divisions : []
}) %>
    
<!-- Departments Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-200">
    <div class="p-6 border-b border-gray-200">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-ruxchai-green rounded-lg flex items-center justify-center">
                <i class="fas fa-table text-white"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900">รายการแผนก</h3>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-blue-50 to-blue-100">
                <tr>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-users mr-2 text-blue-600"></i>
                        รหัสแผนก
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-signature mr-2 text-blue-600"></i>
                        ชื่อแผนก
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-sitemap mr-2 text-blue-600"></i>
                        ฝ่าย
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-building mr-2 text-blue-600"></i>
                        บริษัท/สาขา
                    </th>
                    <th scope="col" class="px-6 py-4 text-center text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-toggle-on mr-2 text-blue-600"></i>
                        สถานะ
                    </th>
                    <th scope="col" class="px-6 py-4 text-center text-sm font-bold text-gray-800 uppercase tracking-wide border-b-2 border-blue-200">
                        <i class="fas fa-cogs mr-2 text-blue-600"></i>
                        การดำเนินการ
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (typeof departments !== 'undefined' && departments.length > 0) { %>
                    <% departments.forEach(function(department, index) { %>
                        <tr class="hover:bg-blue-50 transition-colors duration-150 ease-in-out">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-ruxchai-green rounded-lg flex items-center justify-center">
                                        <i class="fas fa-users text-white"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-base font-bold text-gray-900">
                                            <%= department.department_code %>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= department.department_name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= department.division_code %>
                                </div>
                                <div class="text-sm text-gray-500">
                                    <%= department.division_name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-base font-bold text-gray-900">
                                    <%= department.company_name %>
                                </div>
                                <% if (department.branch_name) { %>
                                    <div class="text-sm text-gray-500">
                                        <%= department.branch_name %>
                                    </div>
                                <% } else { %>
                                    <div class="text-sm text-gray-500">ระดับบริษัท</div>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <%- include('../partials/status-badge', { isActive: department.is_active }) %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="flex justify-center space-x-2">
                                    <%- include('../partials/action-buttons', { 
                                        entity: 'departments', 
                                        code: department.department_code, 
                                        isActive: department.is_active,
                                        csrfToken: typeof csrfToken !== 'undefined' ? csrfToken : null
                                    }) %>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-users text-gray-400 text-2xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">ไม่พบแผนก</h3>
                            <p class="text-gray-600">เริ่มต้นด้วยการสร้างแผนกแรกของคุณ</p>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
    <div class="mt-6">
        <%- include('../partials/pagination', { pagination, query: typeof query !== 'undefined' ? query : {} }) %>
    </div>
<% } %>

