<!-- Path: /views/departments/edit.ejs -->
<%- include('../partials/header', { 
    title: 'Edit Department',
    activeMenu: 'departments'
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'departments',
    user: typeof user !== 'undefined' ? user : null,
    success: typeof success !== 'undefined' ? success : null,
    error: typeof error !== 'undefined' ? error : null,
    warning: typeof warning !== 'undefined' ? warning : null,
    info: typeof info !== 'undefined' ? info : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-2xl border border-gray-100">
                <div class="px-6 py-4 bg-gradient-to-r from-purple-600 to-violet-700 rounded-t-2xl">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <span class="text-2xl mr-3">üè¢</span>
                            Edit Department
                        </h2>
                        <a href="/departments" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                            <i class="fas fa-times text-lg"></i>
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/departments/<%= department.department_code %>" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                    <input type="hidden" name="_method" value="PUT">
                    
                    <div class="space-y-6">
                        <!-- Department Code (Read-only) -->
                        <div>
                            <label for="department_code" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üè∑Ô∏è</span>
                                Department Code
                            </label>
                            <input type="text" 
                                   id="department_code" 
                                   value="<%= department.department_code %>" 
                                   disabled
                                   class="form-input bg-gray-100 cursor-not-allowed">
                            <p class="mt-1 text-sm text-gray-500">
                                Department code cannot be changed
                            </p>
                        </div>
                        
                        <!-- Division (Read-only) -->
                        <div>
                            <label for="division_display" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üè¢</span>
                                Division
                            </label>
                            <input type="text" 
                                   id="division_display" 
                                   value="<%= department.division_code %>" 
                                   disabled
                                   class="form-input bg-gray-100 cursor-not-allowed">
                            <p class="mt-1 text-sm text-gray-500">
                                Division cannot be changed
                            </p>
                        </div>
                        
                        <!-- Department Name -->
                        <div>
                            <label for="department_name" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üíº</span>
                                Department Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text" 
                                   id="department_name" 
                                   name="department_name" 
                                   required
                                   maxlength="200"
                                   value="<%= department.department_name %>"
                                   class="form-input focus:ring-2 focus:ring-purple-500 focus:border-purple-500 border-gray-300 transition-all duration-200">
                        </div>
                        
                        <!-- Status Notice -->
                        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-lg p-4">
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                                </div>
                                <div class="ml-3">
                                    <p class="text-sm text-yellow-700">
                                        Status: <strong><%= department.is_active ? 'Active' : 'Inactive' %></strong>
                                    </p>
                                    <p class="text-sm text-yellow-700 mt-1">
                                        To change status, use the toggle button on the department list page.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Metadata -->
                        <div class="bg-gradient-to-r from-gray-50 to-slate-50 border border-gray-200 rounded-lg p-4">
                            <div class="grid grid-cols-2 gap-4 text-sm">
                                <div>
                                    <span class="text-gray-500">Created:</span>
                                    <span class="text-gray-900 ml-2">
                                        <%= new Date(department.created_date).toLocaleString('th-TH') %>
                                    </span>
                                </div>
                                <div>
                                    <span class="text-gray-500">Created by:</span>
                                    <span class="text-gray-900 ml-2"><%= department.created_by %></span>
                                </div>
                                <% if (department.updated_date) { %>
                                    <div>
                                        <span class="text-gray-500">Updated:</span>
                                        <span class="text-gray-900 ml-2">
                                            <%= new Date(department.updated_date).toLocaleString('th-TH') %>
                                        </span>
                                    </div>
                                    <div>
                                        <span class="text-gray-500">Updated by:</span>
                                        <span class="text-gray-900 ml-2"><%= department.updated_by %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Form Actions -->
                    <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                        <a href="/departments" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Cancel
                        </a>
                        
                        <button type="submit" id="submit-btn" class="btn bg-gradient-to-r from-purple-600 to-violet-700 hover:from-purple-700 hover:to-violet-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                Update Department
                            </span>
                            <span class="btn-loading hidden">
                                <i class="spinner mr-2"></i>
                                Updating...
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    `
}) %>