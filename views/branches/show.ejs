<%- include('../partials/header', {
    title: branch.branch_name + ' - Branch Details',
    includeChartJS: false
}) %>

<%- include('../partials/navigation', {
    activeMenu: 'branches',
    user: typeof user !== 'undefined' ? user : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-4 sm:py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow-xl rounded-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-emerald-600 to-cyan-700 px-4 sm:px-6 py-8 text-white">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-3 sm:space-y-0">
                    <div class="min-w-0 flex-1">
                        <div class="flex items-center mb-3">
                            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center text-3xl mr-4">
                                <i class="fas fa-code-branch"></i>
                            </div>
                            <div>
                                <h2 class="text-2xl sm:text-3xl font-bold text-white truncate">
                                    <%= branch.branch_name %>
                                </h2>
                                <div class="mt-2 flex flex-wrap items-center gap-3">
                                    <p class="text-sm text-teal-100 truncate">
                                        <%= branch.company_code %> - <%= branch.company_name_th %>
                                    </p>
                                    <% if (branch.is_headquarters) { %>
                                        <span class="status-badge status-badge-small status-badge-blue">
                                            <i class="fas fa-building mr-1"></i>HQ
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                        <a href="/branches/<%= branch.branch_code %>/edit" class="btn btn-orange">
                            <i class="fas fa-edit mr-2"></i>
                            Edit
                        </a>
                        <a href="/branches" class="btn btn-white-transparent">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Back
                        </a>
                    </div>
                </div>
            </div>

            <!-- Branch Details -->
            <div class="p-4 sm:p-6 bg-gradient-to-br from-gray-50 to-emerald-50">
                <dl class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2 lg:grid-cols-3">
                    <div class="detail-card detail-card-emerald">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-emerald">
                                <i class="fas fa-id-card"></i>
                            </div>
                            Branch Code
                        </dt>
                        <dd class="detail-value"><%= branch.branch_code %></dd>
                    </div>
                    
                    <div class="detail-card detail-card-blue">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-blue">
                                <i class="fas fa-tools"></i>
                            </div>
                            Branch Type
                        </dt>
                        <dd class="mt-1">
                            <% if (branch.is_headquarters) { %>
                                <span class="status-badge status-badge-blue">
                                    <i class="fas fa-building mr-2"></i>Headquarters
                                </span>
                            <% } else { %>
                                <span class="status-badge status-badge-gray">
                                    <i class="fas fa-code-branch mr-2"></i>Branch
                                </span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-purple">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-purple">
                                <i class="fas fa-bolt"></i>
                            </div>
                            Status
                        </dt>
                        <dd class="mt-1">
                            <%- include('../partials/status-badge', { isActive: branch.is_active }) %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-red">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-red">
                                <i class="fas fa-envelope"></i>
                            </div>
                            Email
                        </dt>
                        <dd class="text-sm text-gray-900 break-all">
                            <% if (branch.email) { %>
                                <a href="mailto:<%= branch.email %>" class="detail-value-link">
                                    <%= branch.email %>
                                </a>
                            <% } else { %>
                                <span class="detail-value text-gray-500">-</span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="detail-card detail-card-orange">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-orange">
                                <i class="fas fa-phone"></i>
                            </div>
                            Phone
                        </dt>
                        <dd class="detail-value"><%= branch.phone || '-' %></dd>
                    </div>
                    
                    <div class="sm:col-span-2 lg:col-span-3 detail-card detail-card-indigo">
                        <dt class="detail-label">
                            <div class="detail-icon detail-icon-indigo">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            Address
                        </dt>
                        <dd class="detail-value break-words"><%= branch.address || '-' %></dd>
                    </div>
                </dl>
            </div>

            <!-- Related Data -->
            <div class="px-4 sm:px-6 py-8 bg-gradient-to-br from-slate-100 to-gray-200">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                    <div class="w-10 h-10 bg-emerald-500 rounded-xl flex items-center justify-center mr-3">
                        <i class="fas fa-chart-bar text-white"></i>
                    </div>
                    Related Information
                </h3>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <a href="/divisions?branch_code=<%= branch.branch_code %>" class="stats-card stats-card-purple">
                        <div class="stats-icon stats-icon-purple">
                            <i class="fas fa-sitemap text-white"></i>
                        </div>
                        <div class="stats-number"><%= stats.divisions || 0 %></div>
                        <div class="stats-label">Divisions</div>
                    </a>
                    <a href="/departments?branch_code=<%= branch.branch_code %>" class="stats-card stats-card-orange">
                        <div class="stats-icon stats-icon-orange">
                            <i class="fas fa-users text-white"></i>
                        </div>
                        <div class="stats-number"><%= stats.departments || 0 %></div>
                        <div class="stats-label">Departments</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: null
}) %>