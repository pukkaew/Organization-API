<!-- Branch Header -->
<div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 mb-8">
    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <div class="w-16 h-16 bg-green-600 rounded-xl flex items-center justify-center text-3xl mr-4">
                <i class="fas fa-code-branch text-white"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-1">
                    <%= branch.branch_name %>
                </h1>
                <p class="text-gray-600">
                    <%= branch.company_code %><% if (branch.company_name_th) { %> - <%= branch.company_name_th %><% } %>
                </p>
                <div class="flex items-center space-x-3 mt-2">
                    <% if (branch.is_headquarters) { %>
                        <span class="bg-yellow-400 bg-opacity-90 text-yellow-900 px-3 py-1 rounded-full text-sm font-semibold">
                            <i class="fas fa-crown mr-1"></i>สำนักงานใหญ่
                        </span>
                    <% } %>
                    <%- include('../partials/status-badge', { isActive: branch.is_active }) %>
                </div>
            </div>
        </div>
        <div class="flex space-x-3">
            <a href="/branches/<%= branch.branch_code %>/edit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors">
                <i class="fas fa-edit mr-2"></i>แก้ไข
            </a>
            <a href="/branches" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>กลับ
            </a>
        </div>
    </div>
</div>

<!-- Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Branch Details -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-4 border-b border-green-200">
                <h2 class="text-xl font-bold text-gray-900 flex items-center">
                    <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-info-circle text-white text-sm"></i>
                    </div>
                    รายละเอียดสาขา
                </h2>
            </div>
            
            <div class="p-6">
                <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div class="bg-white p-4 rounded-lg border-2 border-green-300 shadow-sm">
                        <dt class="text-sm font-bold text-green-800 mb-2 flex items-center">
                            <i class="fas fa-barcode text-green-600 mr-2"></i>
                            รหัสสาขา
                        </dt>
                        <dd class="text-xl font-bold text-gray-900"><%= branch.branch_code %></dd>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg border-2 border-blue-300 shadow-sm">
                        <dt class="text-sm font-bold text-blue-800 mb-2 flex items-center">
                            <i class="fas fa-building text-blue-600 mr-2"></i>
                            บริษัท
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <a href="/companies/<%= branch.company_code %>" class="text-blue-700 hover:text-blue-900 font-bold transition-colors underline">
                                <%= branch.company_code %>
                                <% if (branch.company_name_th) { %><br><span class="text-sm text-gray-700 font-medium"><%= branch.company_name_th %></span><% } %>
                            </a>
                        </dd>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg border-2 border-purple-300 shadow-sm">
                        <dt class="text-sm font-bold text-purple-800 mb-2 flex items-center">
                            <i class="fas fa-sitemap text-purple-600 mr-2"></i>
                            ประเภท
                        </dt>
                        <dd class="text-lg text-gray-900">
                            <% if (branch.is_headquarters) { %>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 border border-yellow-300">
                                    <i class="fas fa-crown mr-2 text-yellow-600"></i>สำนักงานใหญ่
                                </span>
                            <% } else { %>
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 border border-gray-300">
                                    <i class="fas fa-code-branch mr-2 text-gray-600"></i>สาขา
                                </span>
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg border-2 border-green-300 shadow-sm">
                        <dt class="text-sm font-bold text-green-800 mb-2 flex items-center">
                            <i class="fas fa-toggle-on text-green-600 mr-2"></i>
                            สถานะ
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900">
                            <%- include('../partials/status-badge', { isActive: branch.is_active }) %>
                        </dd>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg border-2 border-orange-300 shadow-sm">
                        <dt class="text-sm font-bold text-orange-800 mb-2 flex items-center">
                            <i class="fas fa-calendar-plus text-orange-600 mr-2"></i>
                            วันที่สร้าง
                        </dt>
                        <dd class="text-xl font-bold text-gray-900">
                            <% if (branch.created_date) { %>
                                <%= new Date(branch.created_date).toLocaleDateString('th-TH') %>
                            <% } else { %>
                                -
                            <% } %>
                        </dd>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg border-2 border-indigo-300 shadow-sm">
                        <dt class="text-sm font-bold text-indigo-800 mb-2 flex items-center">
                            <i class="fas fa-user-plus text-indigo-600 mr-2"></i>
                            สร้างโดย
                        </dt>
                        <dd class="text-lg font-semibold text-gray-900 flex items-center">
                            <div class="w-8 h-8 bg-indigo-200 rounded-full flex items-center justify-center mr-3">
                                <i class="fas fa-user text-indigo-700 text-sm"></i>
                            </div>
                            <%= branch.created_by || '-' %>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
    
    <!-- Statistics & Actions Sidebar -->
    <div class="lg:col-span-1">
        <!-- Statistics -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-4 border-b border-blue-200">
                <h3 class="text-lg font-bold text-gray-900 flex items-center">
                    <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-chart-bar text-white text-sm"></i>
                    </div>
                    สถิติข้อมูล
                </h3>
            </div>
            
            <div class="p-6 space-y-4">
                <a href="/divisions?branch_code=<%= branch.branch_code %>" class="block bg-white hover:bg-gray-50 rounded-lg p-4 transition-all duration-200 border-2 border-purple-300 hover:border-purple-500 shadow-sm group">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-purple-600 hover:bg-purple-700 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-all">
                                <i class="fas fa-sitemap text-white"></i>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-purple-800">ฝ่ายทั้งหมด</p>
                                <p class="text-3xl font-bold text-gray-900"><%= stats.divisionCount || 0 %></p>
                            </div>
                        </div>
                        <i class="fas fa-arrow-right text-purple-600 group-hover:text-purple-700 group-hover:translate-x-1 transition-all"></i>
                    </div>
                </a>
                
                <a href="/departments?branch_code=<%= branch.branch_code %>" class="block bg-white hover:bg-gray-50 rounded-lg p-4 transition-all duration-200 border-2 border-orange-300 hover:border-orange-500 shadow-sm group">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-orange-600 hover:bg-orange-700 rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-all">
                                <i class="fas fa-users text-white"></i>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-orange-800">แผนกทั้งหมด</p>
                                <p class="text-3xl font-bold text-gray-900"><%= stats.departmentCount || 0 %></p>
                            </div>
                        </div>
                        <i class="fas fa-arrow-right text-orange-600 group-hover:text-orange-700 group-hover:translate-x-1 transition-all"></i>
                    </div>
                </a>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            <div class="bg-gradient-to-r from-green-50 to-green-100 px-6 py-4 border-b border-green-200">
                <h3 class="text-lg font-bold text-gray-900 flex items-center">
                    <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-bolt text-white text-sm"></i>
                    </div>
                    การดำเนินการ
                </h3>
            </div>
            
            <div class="p-6 space-y-3">
                <a href="/divisions/new?branch_code=<%= branch.branch_code %>" class="flex items-center w-full px-4 py-3 bg-white hover:bg-gray-50 rounded-lg transition-all duration-200 border-2 border-green-300 hover:border-green-500 shadow-sm group">
                    <div class="w-10 h-10 bg-green-600 hover:bg-green-700 rounded-lg flex items-center justify-center mr-3 transition-all">
                        <i class="fas fa-plus text-white text-sm"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-bold text-green-800">เพิ่มฝ่ายใหม่</p>
                        <p class="text-sm font-medium text-gray-700">สร้างฝ่ายในสาขานี้</p>
                    </div>
                    <i class="fas fa-chevron-right text-green-600 group-hover:text-green-700 transition-colors"></i>
                </a>
                
                <a href="/departments/new?branch_code=<%= branch.branch_code %>" class="flex items-center w-full px-4 py-3 bg-white hover:bg-gray-50 rounded-lg transition-all duration-200 border-2 border-blue-300 hover:border-blue-500 shadow-sm group">
                    <div class="w-10 h-10 bg-blue-600 hover:bg-blue-700 rounded-lg flex items-center justify-center mr-3 transition-all">
                        <i class="fas fa-users text-white text-sm"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-bold text-blue-800">เพิ่มแผนกใหม่</p>
                        <p class="text-sm font-medium text-gray-700">สร้างแผนกในสาขานี้</p>
                    </div>
                    <i class="fas fa-chevron-right text-blue-600 group-hover:text-blue-700 transition-colors"></i>
                </a>
                
                <a href="/branches/<%= branch.branch_code %>/edit" class="flex items-center w-full px-4 py-3 bg-white hover:bg-gray-50 rounded-lg transition-all duration-200 border-2 border-yellow-300 hover:border-yellow-500 shadow-sm group">
                    <div class="w-10 h-10 bg-yellow-600 hover:bg-yellow-700 rounded-lg flex items-center justify-center mr-3 transition-all">
                        <i class="fas fa-edit text-white text-sm"></i>
                    </div>
                    <div class="flex-1">
                        <p class="font-bold text-yellow-800">แก้ไขข้อมูล</p>
                        <p class="text-sm font-medium text-gray-700">อัปเดตรายละเอียดสาขา</p>
                    </div>
                    <i class="fas fa-chevron-right text-yellow-600 group-hover:text-yellow-700 transition-colors"></i>
                </a>
            </div>
        </div>
    </div>
</div>