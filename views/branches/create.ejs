<!-- Path: /views/branches/create.ejs -->
<%- include('../partials/header', { 
    title: 'Create Branch',
    includeChartJS: false
}) %>
<%- include('../partials/navigation', { 
    activeMenu: 'branches',
    user: typeof user !== 'undefined' ? user : null,
    success: typeof success !== 'undefined' ? success : null,
    error: typeof error !== 'undefined' ? error : null,
    warning: typeof warning !== 'undefined' ? warning : null,
    info: typeof info !== 'undefined' ? info : null
}) %>

<!-- Main Content -->
<main class="flex-1 py-8">
    <div class="mx-auto max-w-full px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-2xl border border-gray-100">
                <div class="px-6 py-4 bg-gradient-to-r from-green-600 to-emerald-700 rounded-t-2xl">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-white flex items-center">
                            <span class="text-2xl mr-3">üåø</span>
                            Create New Branch
                        </h2>
                        <a href="/branches" class="text-white/80 hover:text-white transition-colors p-2 rounded-full hover:bg-white/10">
                            <i class="fas fa-times text-lg"></i>
                        </a>
                    </div>
                </div>
                
                <form method="post" action="/branches" class="p-6">
                    <% if (typeof csrfToken !== 'undefined') { %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% } %>
                
                <div class="space-y-6">
                    <!-- Company Selection -->
                    <div>
                        <label for="company_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">üè¢</span>
                            Company <span class="text-red-500">*</span>
                        </label>
                        <select id="company_code" 
                                name="company_code" 
                                required
                                class="form-input focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200">
                            <option value="">Select a company</option>
                            <% if (typeof companies !== 'undefined' && companies) { %>
                                <% companies.forEach(function(company) { %>
                                    <option value="<%= company.company_code %>"
                                            <%= (typeof selectedCompany !== 'undefined' && selectedCompany === company.company_code) ? 'selected' : '' %>>
                                        <%= company.company_code %> - <%= company.company_name_th %>
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    
                    <!-- Branch Code -->
                    <div>
                        <label for="branch_code" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">üè∑Ô∏è</span>
                            Branch Code <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="branch_code" 
                               name="branch_code" 
                               required
                               maxlength="20"
                               pattern="[A-Z0-9]+"
                               class="form-input uppercase focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., BR001">
                        <p class="mt-1 text-sm text-gray-500">
                            Use uppercase letters and numbers only. This cannot be changed later.
                        </p>
                    </div>
                    
                    <!-- Branch Name -->
                    <div>
                        <label for="branch_name" class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">üåø</span>
                            Branch Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                               id="branch_name" 
                               name="branch_name" 
                               required
                               maxlength="200"
                               class="form-input focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200"
                               placeholder="e.g., Bangkok Branch">
                    </div>
                    
                    <!-- Branch Type -->
                    <div>
                        <label class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">üè†</span>
                            Branch Type
                        </label>
                        <div class="mt-2 space-y-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" 
                                       name="is_headquarters" 
                                       id="is_headquarters"
                                       class="text-primary-600  rounded">
                                <span class="ml-2 text-sm text-gray-700">This is the headquarters</span>
                            </label>
                            <p class="text-sm text-gray-500">
                                Check this if this branch is the main headquarters of the company.
                                Each company can only have one headquarters.
                            </p>
                        </div>
                    </div>
                    
                    <!-- Contact Information -->
                    <div class="space-y-6 pt-6 border-t border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900 flex items-center">
                            <span class="text-xl mr-2">üìû</span>
                            Contact Information
                        </h3>
                        
                        <!-- Address -->
                        <div>
                            <label for="address" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üìç</span>
                                Address
                            </label>
                            <textarea id="address" 
                                      name="address" 
                                      rows="3"
                                      class="form-input focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200"
                                      placeholder="Branch address"></textarea>
                        </div>
                        
                        <!-- Phone -->
                        <div>
                            <label for="phone" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üìû</span>
                                Phone
                            </label>
                            <input type="tel" 
                                   id="phone" 
                                   name="phone"
                                   class="form-input focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200"
                                   placeholder="02-123-4567">
                        </div>
                        
                        <!-- Email -->
                        <div>
                            <label for="email" class="form-label text-gray-800 font-semibold flex items-center">
                                <span class="text-lg mr-2">üìß</span>
                                Email
                            </label>
                            <input type="email" 
                                   id="email" 
                                   name="email"
                                   class="form-input focus:ring-2 focus:ring-green-500 focus:border-green-500 border-gray-300 transition-all duration-200"
                                   placeholder="branch@example.com">
                        </div>
                    </div>
                    
                    <!-- Status -->
                    <div>
                        <label class="form-label text-gray-800 font-semibold flex items-center">
                            <span class="text-lg mr-2">‚ö°</span>
                            Status
                        </label>
                        <div class="flex items-center space-x-6 mt-2">
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="true" 
                                       checked
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Active</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="radio" 
                                       name="is_active" 
                                       value="false"
                                       class="text-primary-600 ">
                                <span class="ml-2 text-sm text-gray-700">Inactive</span>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                    <a href="/branches" class="btn btn-ghost hover:bg-gray-100 transition-all duration-200">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Cancel
                    </a>
                    
                    <div class="flex items-center space-x-3">
                        <button type="reset" class="btn btn-outline border-gray-300 text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
                            <i class="fas fa-redo mr-2"></i>
                            Reset
                        </button>
                        <button type="submit" id="submit-btn" class="btn bg-gradient-to-r from-green-600 to-emerald-700 hover:from-green-700 hover:to-emerald-800 text-white shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                            <span class="btn-text">
                                <i class="fas fa-save mr-2"></i>
                                Create Branch
                            </span>
                            <span class="btn-loading hidden">
                                <i class="spinner mr-2"></i>
                                Creating...
                            </span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <!-- Help Section -->
        <div class="mt-6 bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100 shadow-lg">
            <div class="flex">
                <div class="flex-shrink-0">
                    <span class="text-2xl">üí°</span>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-bold text-green-800 flex items-center">
                        <span class="mr-2">üìñ</span>
                        Guidelines
                    </h3>
                    <div class="mt-3 text-sm text-green-700">
                        <ul class="space-y-2">
                            <li class="flex items-start">
                                <span class="text-green-500 mr-2 mt-0.5">‚Ä¢</span>
                                Branch code cannot be changed after creation
                            </li>
                            <li class="flex items-start">
                                <span class="text-green-500 mr-2 mt-0.5">‚Ä¢</span>
                                Each company can have only one headquarters
                            </li>
                            <li class="flex items-start">
                                <span class="text-green-500 mr-2 mt-0.5">‚Ä¢</span>
                                Branch code should be unique within the company
                            </li>
                            <li class="flex items-start">
                                <span class="text-green-500 mr-2 mt-0.5">‚Ä¢</span>
                                All branches start as active by default
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</main>

<%- include('../partials/footer', {
    pageScripts: `
    <script>
    // Auto uppercase for branch code
    document.getElementById('branch_code').addEventListener('input', function(e) {
        e.target.value = e.target.value.toUpperCase();
    });
    
    // Form submission loading state
    document.querySelector('form').addEventListener('submit', function() {
        const submitBtn = document.getElementById('submit-btn');
        const btnText = submitBtn.querySelector('.btn-text');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        submitBtn.disabled = true;
        btnText.classList.add('hidden');
        btnLoading.classList.remove('hidden');
    });
    </script>
    `
}) %>